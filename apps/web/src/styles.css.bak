  display: flex;
  gap: 4px;
}

.create-event-step-dot {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 10px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
