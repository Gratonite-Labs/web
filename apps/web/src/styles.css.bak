  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 16px;
  padding: 12px;
  background:
    radial-gradient(circle at 90% 8%, color-mix(in srgb, var(--gg-rarity-color) 20%, transparent), transparent 42%),
    radial-gradient(circle at 10% 0%, color-mix(in srgb, var(--gg-rarity-glow) 70%, transparent), transparent 36%),
    rgba(8, 12, 22, 0.62);
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.02), 0 8px 24px rgba(0,0,0,0.18);
  display: grid;
  gap: 10px;
}

.gg-native-reveal-top {
  display: grid;
  grid-template-columns: 48px minmax(0, 1fr) auto;
  gap: 10px;
  align-items: center;
}

.gg-native-reveal-symbol {
  width: 48px;
  height: 48px;
  border-radius: 14px;
  border: 1px solid color-mix(in srgb, var(--gg-rarity-color) 50%, rgba(255,255,255,0.1));
  background: color-mix(in srgb, var(--gg-rarity-color) 18%, rgba(8,12,22,0.8));
  display: grid;
  place-items: center;
  font-size: 18px;
  font-weight: 800;
  color: var(--text);
}

.gg-native-reveal-copy {
  min-width: 0;
  display: grid;
  gap: 4px;
}

.gg-native-reveal-name {
  font-weight: 700;
  font-size: 14px;
  color: var(--text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gg-native-reveal-meta {
  color: var(--text-muted);
  font-size: 11px;
}

.gg-native-status-pill {
  border-radius: 999px;
  padding: 5px 8px;
  border: 1px solid rgba(255,255,255,0.08);
  font-size: 11px;
  font-weight: 700;
  color: var(--text);
  background: rgba(255,255,255,0.03);
}

.gg-native-status-pill.is-new {
  border-color: rgba(74, 222, 128, 0.22);
  background: rgba(74, 222, 128, 0.08);
}

.gg-native-status-pill.is-dupe {
  border-color: rgba(245, 158, 11, 0.22);
  background: rgba(245, 158, 11, 0.08);
}

.gg-native-reveal-path {
  border: 1px solid rgba(255,255,255,0.05);
  border-radius: 10px;
  background: rgba(255,255,255,0.015);
  padding: 8px 10px;
  color: var(--text-faint);
  font-size: 11px;
  font-family: ui-monospace, SFMono-Regular, Menlo, monospace;
  word-break: break-all;
}

.gg-native-reveal-bottom {
  display: flex;
  justify-content: space-between;
  gap: 10px;
  flex-wrap: wrap;
  color: var(--text-muted);
  font-size: 11px;
}

.gg-native-empty {
  min-height: 140px;
  border: 1px dashed rgba(255,255,255,0.08);
  border-radius: 12px;
  background: rgba(255,255,255,0.015);
  display: grid;
  align-content: center;
  justify-items: center;
  gap: 6px;
  text-align: center;
  padding: 12px;
}

.gg-native-empty.compact {
  min-height: 72px;
}

.gg-native-empty strong {
  color: var(--text);
  font-size: 13px;
}

.gg-native-empty span {
  color: var(--text-muted);
  font-size: 12px;
}

.gg-native-recent-list {
  display: grid;
  gap: 8px;
}

.gg-native-recent-row {
  display: grid;
  grid-template-columns: auto minmax(0, 1fr) auto auto;
  gap: 8px;
  align-items: center;
  border-radius: 10px;
  border: 1px solid rgba(255,255,255,0.05);
  background: rgba(255,255,255,0.015);
  padding: 7px 8px;
}

.gg-native-recent-dot {
  width: 8px;
  height: 8px;
  border-radius: 999px;
}

.gg-native-recent-label {
  min-width: 0;
  color: var(--text);
  font-size: 12px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.gg-native-recent-rarity {
  color: var(--text-faint);
  font-size: 11px;
}

.gg-native-recent-status {
  color: var(--text-faint);
  font-size: 11px;
  font-weight: 700;
}

.gg-native-recent-status.is-new {
  color: #86efac;
}

.gg-native-recent-status.is-dupe {
  color: #fcd34d;
}

@media (max-width: 1100px) {
  .gg-native-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 640px) {
  .gg-native-currency-row,
  .gg-native-collection-row {
    grid-template-columns: 1fr;
  }

  .gg-native-reveal-top {
    grid-template-columns: 48px minmax(0, 1fr);
  }

  .gg-native-status-pill {
    grid-column: 1 / -1;
    justify-self: start;
  }

  .gg-native-recent-row {
    grid-template-columns: auto minmax(0, 1fr);
  }

  .gg-native-recent-rarity,
  .gg-native-recent-status {
    justify-self: start;
  }
}

.settings-wardrobe-state {
  font-size: 10px;
  color: var(--text-faint);
}

.settings-economy-ledger {
  display: grid;
  gap: 6px;
}

.settings-economy-entry {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1px solid var(--stroke);
  border-radius: var(--radius-sm);
  background: rgba(8, 12, 20, 0.42);
  padding: 6px 10px;
  font-size: 12px;
  color: var(--text-muted);
}

.settings-field-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 12px;
}

.settings-field {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.settings-field-label {
  font-size: 12px;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  color: var(--text-faint);
}

.settings-field-value {
  font-size: 14px;
  color: var(--text);
}

.settings-field-control {
  display: flex;
  align-items: center;
  gap: 10px;
}

.settings-field-row {
  align-items: center;
  flex-wrap: wrap;
}

/* Color Mode Toggle Buttons */
.settings-color-mode-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 10px 16px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: transparent;
  color: var(--text-muted);
  font-size: 13px;
  font-weight: 500;
  cursor: pointer;
  transition: all var(--motion-fast) ease;
}

.settings-color-mode-btn:hover {
  background: var(--bg-soft);
  color: var(--text);
  border-color: var(--stroke-strong);
}

.settings-color-mode-btn.active {
  background: var(--accent);
  color: #ffffff;
  border-color: var(--accent);
}

.settings-color-mode-btn svg {
  flex-shrink: 0;
  opacity: 0.9;
}

.settings-shop-card {
  margin-top: 18px;
  border: 1px solid var(--stroke);
  background: rgba(20, 24, 36, 0.42);
  border-radius: 14px;
  padding: 14px;
  display: grid;
  gap: 14px;
}

.shop-section {
  display: grid;
  gap: 10px;
}

.shop-section-header {
  font-size: 0.85rem;
  font-weight: 700;
  letter-spacing: 0.03em;
  text-transform: uppercase;
  color: var(--text-muted);
}

.shop-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(190px, 1fr));
  gap: 10px;
}

.shop-item {
  position: relative;
  border: 1px solid var(--stroke);
  border-radius: 12px;
  background: rgba(16, 21, 32, 0.64);
  padding: 10px;
  display: grid;
  gap: 8px;
}

.shop-item-equipped {
  border-color: rgba(96, 130, 255, 0.55);
  box-shadow: 0 0 0 1px rgba(96, 130, 255, 0.3) inset;
}

/* Gratonites Shop — balance banner */
.shop-balance-banner {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 18px;
  border-radius: 14px;
  background:
    linear-gradient(135deg, rgba(251, 191, 36, 0.12), rgba(245, 158, 11, 0.06));
  border: 1px solid rgba(251, 191, 36, 0.2);
}

.shop-balance-coin {
  font-size: 28px;
  color: #fbbf24;
  text-shadow: 0 0 12px rgba(251, 191, 36, 0.4);
}

.shop-balance-info {
  display: grid;
  gap: 1px;
}

.shop-balance-amount {
  font-size: 22px;
  font-weight: 800;
  color: #fbbf24;
  font-variant-numeric: tabular-nums;
  line-height: 1.1;
}

.shop-balance-label {
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.06em;
  color: var(--text-faint);
}

/* Shop type sections */
.shop-type-section,
.shop-featured-section {
  display: grid;
  gap: 10px;
}

.shop-featured-section {
  padding-bottom: 4px;
  border-bottom: 1px solid var(--stroke);
}

.shop-grid-featured {
  grid-template-columns: repeat(auto-fill, minmax(170px, 1fr));
}

.shop-item-featured {
  position: relative;
  border-color: rgba(251, 191, 36, 0.25);
  background: rgba(251, 191, 36, 0.04);
}

.shop-item-featured:hover {
  border-color: rgba(251, 191, 36, 0.4);
}

.shop-item-type-badge {
  position: absolute;
  top: 6px;
  right: 6px;
  font-size: 12px;
  line-height: 1;
}

/* Soundboard sound items */
.shop-sound-preview {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px;
  background: var(--bg);
  border-radius: 8px;
}

.shop-sound-play-btn {
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  background: var(--accent);
  color: var(--bg);
  font-size: 14px;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  transition: transform 0.15s, opacity 0.15s;
}

.shop-sound-play-btn:hover { transform: scale(1.1); }
.shop-sound-play-btn:disabled { opacity: 0.3; cursor: not-allowed; }

.shop-sound-name {
  font-weight: 600;
  font-size: 14px;
  color: var(--text);
}

/* Item card hover */
.shop-item {
  transition: border-color 0.15s ease, transform 0.15s ease, box-shadow 0.15s ease;
}

.shop-item:hover {
  border-color: var(--stroke-strong, rgba(255, 255, 255, 0.15));
  transform: translateY(-1px);
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.2);
}

/* Gratonites Shop styles */
.shop-item-owned {
  border-color: #22c55e;
  background: rgba(34, 197, 94, 0.08);
}

.shop-item-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8px;
}

.price-tag {
  font-weight: 600;
  color: #fbbf24;
  font-size: 14px;
}

.price-unaffordable {
  color: var(--text-faint);
  text-decoration: line-through;
}

.owned-badge {
  font-size: 11px;
  color: #22c55e;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.shop-effect-preview-small {
  border-radius: 10px;
  border: 1px solid var(--stroke);
  background: rgba(255, 255, 255, 0.03);
  min-height: 84px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
  overflow: hidden;
}

.shop-item-preview,
.shop-effect-preview,
.shop-nameplate-preview {
  border-radius: 10px;
  border: 1px solid var(--stroke);
  background: rgba(255, 255, 255, 0.03);
  min-height: 84px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px;
}

/* CSS-based previews for items without uploaded assets */
.shop-preview-ring {
  position: relative;
  width: 56px;
  height: 56px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: conic-gradient(
    hsl(var(--ring-hue, 200), 80%, 60%),
    hsl(calc(var(--ring-hue, 200) + 60), 70%, 55%),
    hsl(var(--ring-hue, 200), 80%, 60%)
  );
  padding: 3px;
}

.shop-preview-ring > * {
  border-radius: 50%;
}

.shop-preview-effect {
  width: 80px;
  height: 60px;
  border-radius: 8px;
  background:
    radial-gradient(circle at 20% 30%, hsla(var(--effect-hue, 260), 70%, 60%, 0.4), transparent 50%),
    radial-gradient(circle at 80% 70%, hsla(calc(var(--effect-hue, 260) + 40), 60%, 55%, 0.35), transparent 50%),
    linear-gradient(135deg, hsla(var(--effect-hue, 260), 40%, 18%, 0.6), hsla(calc(var(--effect-hue, 260) + 30), 30%, 12%, 0.5));
  border: 1px solid hsla(var(--effect-hue, 260), 50%, 50%, 0.2);
  animation: shop-effect-pulse 3s ease-in-out infinite alternate;
}

@keyframes shop-effect-pulse {
  0% { opacity: 0.85; }
  100% { opacity: 1; }
}

.shop-preview-nameplate {
  display: inline-block;
  padding: 4px 14px;
  border-radius: 6px;
  font-size: 14px;
  font-weight: 700;
  background: linear-gradient(
    135deg,
    hsla(var(--np-hue, 200), 70%, 45%, 0.5),
    hsla(calc(var(--np-hue, 200) + 30), 60%, 40%, 0.4)
  );
  color: hsl(var(--np-hue, 200), 90%, 88%);
  border: 1px solid hsla(var(--np-hue, 200), 50%, 50%, 0.25);
  text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

.shop-effect-card {
  position: relative;
  width: 100%;
  min-height: 78px;
  border-radius: 10px;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.08);
  background: linear-gradient(120deg, rgba(55, 63, 90, 0.44), rgba(33, 38, 52, 0.5));
}

.shop-effect-card img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.42;
}

.shop-effect-title {
  position: relative;
  z-index: 1;
  padding: 10px;
  font-weight: 700;
}

.shop-item-name {
  font-size: 0.93rem;
  font-weight: 700;
}

.shop-item-description {
  font-size: 0.82rem;
  color: var(--text-muted);
  line-height: 1.35;
  min-height: 2.1em;
}

.settings-field-separator {
  font-size: 12px;
  color: var(--text-faint);
}

.settings-select {
  background: rgba(6, 10, 18, 0.6);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  color: var(--text);
  padding: 6px 10px;
  font-family: inherit;
  font-size: 13px;
}

.settings-select:focus-visible {
  outline: none;
  border-color: var(--accent);
  box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 18%, transparent);
}

.settings-range {
  flex: 1;
}

.settings-range-value {
  font-size: 12px;
  color: var(--text-muted);
  min-width: 48px;
}

.settings-subsection-title {
  margin: 0 0 12px;
  font-size: 14px;
  font-weight: 700;
  color: var(--text);
}

.settings-field-row-wrap {
  flex-wrap: wrap;
}

.user-bar-presence-label {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
  color: var(--text-faint);
}

.settings-theme-editor {
  margin-top: 14px;
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(8, 12, 20, 0.45);
  padding: 12px;
  display: grid;
  gap: 10px;
}

.settings-theme-header {
  display: grid;
  gap: 4px;
}

.settings-theme-title {
  font-size: 14px;
  color: var(--text);
}

.settings-theme-presets {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 8px;
}

.settings-theme-preset {
  border: 1px solid var(--stroke);
  border-radius: 10px;
  background:
    linear-gradient(160deg, rgba(121, 223, 255, 0.04), transparent 35%),
    linear-gradient(325deg, rgba(138, 123, 255, 0.04), transparent 45%),
    rgba(8, 12, 20, 0.45);
  color: inherit;
  text-align: left;
  padding: 10px;
  display: grid;
  gap: 4px;
  transition: border-color 0.14s ease, background 0.14s ease, transform 0.14s ease;
}

.settings-theme-preset:hover {
  border-color: color-mix(in srgb, var(--accent) 35%, var(--stroke));
  background:
    linear-gradient(160deg, rgba(121, 223, 255, 0.08), transparent 35%),
    linear-gradient(325deg, rgba(138, 123, 255, 0.07), transparent 45%),
    rgba(10, 15, 24, 0.55);
  transform: translateY(-1px);
}

.settings-theme-preset-name {
  font-size: 12px;
  font-weight: 700;
  color: var(--text);
}

.settings-theme-preset-desc {
  font-size: 11px;
  color: var(--text-faint);
}

.settings-theme-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
}

.settings-theme-field {
  display: grid;
  gap: 5px;
}

.settings-theme-label {
  font-size: 12px;
  color: var(--text-muted);
}

.settings-theme-field input[type='color'] {
  width: 100%;
  height: 34px;
  border: 1px solid var(--stroke);
  border-radius: 8px;
  background: rgba(6, 10, 18, 0.6);
  padding: 0;
}

.settings-theme-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.settings-theme-json {
  width: 100%;
  resize: vertical;
  min-height: 120px;
  border: 1px solid var(--stroke);
  border-radius: var(--radius-sm);
  background: rgba(6, 10, 18, 0.62);
  color: var(--text);
  padding: 10px;
  font-size: 12px;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', monospace;
}

.settings-toggle {
  position: relative;
  display: inline-flex;
  align-items: center;
}

.settings-toggle input {
  display: none;
}

.settings-toggle input:focus-visible + .settings-toggle-indicator {
  box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 30%, transparent);
}

.settings-toggle-indicator {
  width: 38px;
  height: 20px;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.15);
  border: 1px solid var(--stroke);
  position: relative;
  transition: background 0.15s ease, border-color 0.15s ease;
}

.settings-toggle-indicator::after {
  content: '';
  position: absolute;
  top: 2px;
  left: 2px;
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: var(--text);
  transition: transform 0.15s ease;
}

.settings-toggle input:checked + .settings-toggle-indicator {
  background: rgba(212, 175, 55, 0.35);
  border-color: rgba(212, 175, 55, 0.5);
}

.settings-toggle input:checked + .settings-toggle-indicator::after {
  transform: translateX(18px);
}

.settings-days {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.settings-day {
  background: rgba(6, 10, 18, 0.6);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-pill);
  padding: 4px 10px;
  font-size: 12px;
  color: var(--text-muted);
  cursor: pointer;
  transition: background 0.12s ease, color 0.12s ease, border-color 0.12s ease;
}

.settings-day-active {
  background: rgba(212, 175, 55, 0.18);
  border-color: rgba(212, 175, 55, 0.45);
  color: var(--text);
}

.settings-footer {
  display: flex;
  justify-content: flex-end;
}

.settings-error {
  color: var(--danger);
  font-size: 13px;
}

.settings-muted {
  color: var(--text-muted);
  font-size: 14px;
}

.settings-field-control .input-group {
  margin: 0;
}

.settings-field-control .input-wrapper {
  min-width: 120px;
}

/* ==========================================================================
   Attachment Display
   ========================================================================== */

.attachment-display {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  margin-top: 6px;
}

.attachment-image-link {
  display: block;
  border-radius: var(--radius-md);
  overflow: hidden;
  max-width: 400px;
  border: 1px solid var(--stroke);
  transition: border-color 0.15s;
  padding: 0;
  background: none;
  font: inherit;
  color: inherit;
  text-align: inherit;
  cursor: pointer;
}




.attachment-image-link:hover {
  border-color: var(--stroke-strong);
}

.attachment-image {
  display: block;
  max-width: 100%;
  max-height: 300px;
  object-fit: contain;
  border-radius: var(--radius-md);
}

.attachment-file {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 14px;
  background: rgba(6, 10, 18, 0.5);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  color: var(--text-muted);
  text-decoration: none;
  transition: background 0.15s, border-color 0.15s;
  min-width: 200px;
}

.attachment-file:hover {
  background: rgba(212, 175, 55, 0.04);
  border-color: var(--stroke-strong);
  text-decoration: none;
  color: var(--text);
}

.attachment-file-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.attachment-file-name {
  font-size: 13px;
  font-weight: 600;
  color: var(--accent);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.attachment-file-size {
  font-size: 11px;
  color: var(--text-faint);
}

/* ---------- Video Player ---------- */

.attachment-video {
  display: flex;
  flex-direction: column;
  max-width: 480px;
  border-radius: var(--radius-md);
  overflow: hidden;
  border: 1px solid var(--stroke);
  background: rgba(6, 10, 18, 0.5);
}

.attachment-video-player {
  display: block;
  width: 100%;
  max-height: 360px;
  object-fit: contain;
  background: #000;
}

.attachment-video-filename {
  padding: 6px 12px;
  font-size: 12px;
  color: var(--text-faint);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* ---------- Audio Waveform Player ---------- */

.attachment-audio {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 14px;
  background: rgba(6, 10, 18, 0.5);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  min-width: 280px;
  max-width: 420px;
}

.attachment-audio-play {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  border: none;
  background: var(--accent);
  color: #1a1a2e;
  cursor: pointer;
  transition: background 0.15s, transform 0.1s;
}

.attachment-audio-play:hover {
  background: var(--accent-2);
  transform: scale(1.06);
}

.attachment-audio-play:active {
  transform: scale(0.96);
}

.attachment-audio-body {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.attachment-audio-waveform {
  display: flex;
  align-items: flex-end;
  gap: 2px;
  height: 32px;
  cursor: pointer;
  user-select: none;
}

.attachment-audio-bar {
  flex: 1;
  min-width: 2px;
  background: var(--stroke);
  border-radius: 1px;
  transition: background 0.1s;
}

.attachment-audio-bar-played {
  background: var(--accent);
}

.attachment-audio-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.attachment-audio-time {
  font-size: 11px;
  font-weight: 600;
  color: var(--text-muted);
  font-variant-numeric: tabular-nums;
}

.attachment-audio-info {
  font-size: 11px;
  color: var(--text-faint);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
}

/* ---------- File Download Card ---------- */

.attachment-file-card {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 12px 16px;
  background: rgba(6, 10, 18, 0.5);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  color: var(--text-muted);
  text-decoration: none;
  transition: background 0.15s, border-color 0.15s;
  min-width: 240px;
  max-width: 360px;
}

.attachment-file-card:hover {
  background: rgba(212, 175, 55, 0.04);
  border-color: var(--stroke-strong);
  text-decoration: none;
  color: var(--text);
}

.attachment-file-card-icon {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
  border-radius: 8px;
  background: rgba(212, 175, 55, 0.1);
  color: var(--accent);
}

.attachment-file-icon {
  width: 24px;
  height: 24px;
}

.attachment-file-card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.attachment-file-card-name {
  font-size: 13px;
  font-weight: 600;
  color: var(--accent);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.attachment-file-card-size {
  font-size: 11px;
  color: var(--text-faint);
}

.attachment-file-card-download {
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
  border-radius: 6px;
  color: var(--text-faint);
  transition: color 0.15s, background 0.15s;
}

.attachment-file-card:hover .attachment-file-card-download {
  color: var(--accent);
  background: rgba(212, 175, 55, 0.08);
}

/* ==========================================================================
   Attachment Preview (pending uploads)
   ========================================================================== */

.attachment-preview {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  padding: 8px 16px 0;
}

.attachment-preview-items {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  min-width: 0;
}

.attachment-preview-compact {
  padding: 0;
  display: grid;
  gap: 6px;
}

.attachment-preview-compact .attachment-preview-items {
  display: grid;
  gap: 6px;
  align-items: start;
}

.attachment-preview-toolbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
  flex-wrap: wrap;
  min-width: 0;
}

.attachment-preview-count {
  font-size: 11px;
  color: var(--text-faint);
}

.attachment-preview-clear {
  border: 1px solid var(--stroke);
  background: rgba(10, 16, 28, 0.52);
  color: var(--text-muted);
  border-radius: 999px;
  font-size: 11px;
  padding: 3px 8px;
  cursor: pointer;
}

.attachment-preview-clear:hover {
  color: var(--text);
}

.attachment-preview-item {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 10px;
  background: var(--bg-soft);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  max-width: 200px;
  min-width: 0;
}

.attachment-preview-item-compact {
  width: 72px;
  height: 72px;
  max-width: none;
  padding: 0;
  border-radius: 10px;
  overflow: hidden;
}

.attachment-preview-thumb {
  width: 40px;
  height: 40px;
  object-fit: cover;
  border-radius: var(--radius-sm);
}

.attachment-preview-item-compact .attachment-preview-thumb {
  width: 100%;
  height: 100%;
  border-radius: 0;
}

.attachment-preview-file {
  width: 40px;
  height: 40px;
  display: grid;
  place-items: center;
  color: var(--text-faint);
}

.attachment-preview-item-compact .attachment-preview-file {
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.03);
}

.attachment-preview-name {
  font-size: 12px;
  color: var(--text-muted);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  flex: 1;
  max-width: 100%;
}

.server-member-admin-item {
  align-items: flex-start;
  gap: 12px;
}

.server-member-admin-meta {
  min-width: 0;
  flex: 1;
  display: grid;
  gap: 4px;
}

.server-member-admin-name {
  font-weight: 600;
  color: var(--text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.server-member-admin-subline {
  font-size: 12px;
  color: var(--text-faint);
  overflow-wrap: anywhere;
  line-height: 1.35;
}

.server-member-admin-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  justify-content: flex-end;
  align-items: center;
}

.attachment-preview-remove {
  background: none;
  border: none;
  color: var(--text-faint);
  font-size: 16px;
  width: 20px;
  height: 20px;
  display: grid;
  place-items: center;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all 0.1s;
  flex-shrink: 0;
}

.attachment-preview-item-compact .attachment-preview-remove {
  position: absolute;
  top: 4px;
  right: 4px;
  background: rgba(0, 0, 0, 0.62);
  color: #fff;
  border-radius: 999px;
  width: 22px;
  height: 22px;
}

.attachment-preview-remove:hover {
  background: var(--danger-bg);
  color: var(--danger);
}

/* ==========================================================================
   File Upload Button
   ========================================================================== */

.file-upload-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 36px;
  height: 36px;
  background: none;
  border: none;
  color: var(--text-muted);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: background 0.15s, color 0.15s;
  flex-shrink: 0;
}

.file-upload-btn:hover {
  background: rgba(212, 175, 55, 0.08);
  color: var(--text);
}

/* ==========================================================================
   Reply Preview
   ========================================================================== */

.reply-preview {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 16px;
  background: var(--bg-soft);
  border-top: 1px solid var(--stroke);
  border-left: 2px solid var(--accent);
  flex-shrink: 0;
}

.reply-preview-content {
  display: flex;
  align-items: center;
  gap: 4px;
  min-width: 0;
  font-size: 13px;
}

.reply-preview-label {
  color: var(--text-faint);
  flex-shrink: 0;
}

.reply-preview-author {
  font-weight: 600;
  color: var(--text);
  flex-shrink: 0;
}

.reply-preview-snippet {
  color: var(--text-muted);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-left: 4px;
}

.reply-preview-close {
  background: none;
  border: none;
  color: var(--text-faint);
  font-size: 18px;
  width: 24px;
  height: 24px;
  display: grid;
  place-items: center;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all 0.1s;
  flex-shrink: 0;
}

.reply-preview-close:hover {
  background: rgba(255, 255, 255, 0.06);
  color: var(--text);
}

/* ==========================================================================
   Message Reply Header (inline referenced message)
   ========================================================================== */

.message-reply-header {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 12px;
  color: var(--text-faint);
  margin-bottom: 2px;
  padding: 2px 0;
}

.message-reply-header svg {
  flex-shrink: 0;
  opacity: 0.6;
}

.message-reply-author {
  font-weight: 600;
  color: var(--text-muted);
}

.message-reply-snippet {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  color: var(--text-faint);
}

/* ==========================================================================
   Message Edit (inline editing)
   ========================================================================== */

.message-item-editing {
  background: rgba(212, 175, 55, 0.04);
}

.message-edit-wrapper {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.message-edit-input {
  width: 100%;
  padding: 8px 10px;
  background: var(--bg-input);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  color: var(--text);
  font-family: inherit;
  font-size: 14px;
  outline: none;
  resize: none;
  min-height: 36px;
  transition: border-color 0.15s ease;
}

.message-edit-input:focus {
  border-color: rgba(212, 175, 55, 0.4);
}

.message-edit-actions {
  display: flex;
  align-items: center;
}

.message-edit-hint {
  font-size: 11px;
  color: var(--text-faint);
}

/* ==========================================================================
   Delete Modal Message Preview
   ========================================================================== */

.message-preview-box {
  padding: 10px 12px;
  background: rgba(6, 10, 18, 0.5);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  margin-bottom: 12px;
}

.message-preview-author {
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
  display: block;
  margin-bottom: 4px;
}

.message-preview-content {
  font-size: 13px;
  color: var(--text-muted);
  line-height: 1.4;
  word-wrap: break-word;
  overflow-wrap: break-word;
  white-space: pre-wrap;
  margin: 0;
}

/* ==========================================================================
   Voice Channel View
   ========================================================================== */

.channel-page-voice {
  background:
    radial-gradient(circle at 18% 6%, rgba(121, 223, 255, 0.08), transparent 38%),
    radial-gradient(circle at 86% 10%, rgba(138, 123, 255, 0.1), transparent 42%),
    radial-gradient(circle at top, rgba(12, 18, 30, 0.9), rgba(6, 10, 18, 1));
}

.voice-channel-view {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  padding: 18px 20px 24px;
  color: var(--text);
}

.voice-channel-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  margin-bottom: 14px;
}

.voice-channel-header-panel {
  display: grid;
  gap: 2px;
  padding: 10px 12px;
  border-radius: 16px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background:
    linear-gradient(180deg, rgba(255, 255, 255, 0.02), transparent),
    rgba(10, 15, 26, 0.5);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.02);
}

.voice-channel-title-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 8px;
}

.voice-channel-title {
  font-size: 18px;
  font-weight: 700;
}

.voice-channel-header-badges {
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.voice-channel-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  border-radius: 999px;
  border: 1px solid rgba(255,255,255,0.09);
  background: rgba(255,255,255,0.03);
  color: var(--text-faint);
  padding: 3px 8px;
  font-size: 10px;
  font-weight: 700;
  letter-spacing: 0.04em;
  text-transform: uppercase;
}

.voice-channel-badge-live {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.22);
  background: linear-gradient(135deg, rgba(121,223,255,0.12), rgba(138,123,255,0.1));
}

.voice-channel-subtitle {
  font-size: 12px;
  color: var(--text-faint);
}

.voice-channel-subtle-status {
  font-size: 11px;
  color: var(--text-muted);
  margin-top: 2px;
}

.voice-chat-toggle {
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(8, 12, 20, 0.62);
  color: var(--text);
  padding: 8px 12px;
  border-radius: 12px;
  cursor: pointer;
  font-size: 12px;
  font-weight: 600;
}

.voice-channel-body {
  flex: 1;
  display: flex;
  gap: 14px;
  min-height: 0;
}

.voice-channel-empty {
  flex: 1;
  border: 1px solid rgba(163, 191, 239, 0.1);
  border-radius: 18px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12px;
  min-height: 280px;
  background:
    radial-gradient(circle at 78% 12%, rgba(138, 123, 255, 0.08), transparent 38%),
    radial-gradient(circle at 18% 8%, rgba(121, 223, 255, 0.06), transparent 34%),
    rgba(8, 12, 20, 0.56);
  box-shadow:
    inset 0 1px 0 rgba(255, 255, 255, 0.02),
    0 14px 32px rgba(0, 0, 0, 0.14);
}

.voice-participants-rail {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 7px;
  width: min(560px, 100%);
}

.voice-participant-pill {
  display: inline-flex;
  align-items: center;
  gap: 7px;
  border-radius: 999px;
  border: 1px solid rgba(255,255,255,0.08);
  background: rgba(255,255,255,0.03);
  color: var(--text);
  padding: 5px 10px;
  max-width: 100%;
}

.voice-participant-name {
  font-size: 12px;
  font-weight: 600;
  color: var(--text);
  max-width: 180px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.voice-participant-state {
  font-size: 11px;
  color: var(--text-faint);
}

.voice-participant-pill-more {
  color: var(--text-muted);
}

.voice-channel-status {
  color: var(--text-faint);
  font-size: 13px;
}

.voice-presence-feed {
  display: grid;
  gap: 6px;
  width: min(360px, 100%);
}

.voice-presence-item {
  font-size: 12px;
  color: var(--text-muted);
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(8, 12, 20, 0.52);
  border-radius: 999px;
  padding: 4px 10px;
}

.voice-preflight {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  max-width: 320px;
  text-align: center;
  padding: 10px 12px;
  border-radius: 14px;
  background: rgba(6, 10, 18, 0.42);
  border: 1px solid rgba(163, 191, 239, 0.08);
}

.voice-preflight-title {
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
}

.voice-preflight-subtitle {
  font-size: 12px;
  color: var(--text-faint);
}

.voice-preflight-error {
  font-size: 12px;
  color: var(--danger);
}

.voice-preflight-btn {
  padding: 6px 12px;
  border-radius: var(--radius-pill);
  border: 1px solid rgba(212, 175, 55, 0.5);
  background: rgba(212, 175, 55, 0.2);
  color: var(--text);
  font-size: 12px;
  cursor: pointer;
}

.voice-preflight-selects {
  display: grid;
  gap: 8px;
  width: 100%;
}

.voice-preflight-selects label {
  display: grid;
  gap: 4px;
  font-size: 11px;
  color: var(--text-faint);
  text-align: left;
}

.voice-preflight-selects select {
  background: rgba(6, 10, 18, 0.6);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-sm);
  color: var(--text);
  font-size: 12px;
  padding: 6px 8px;
}

.voice-join {
  padding: 9px 16px;
  background: rgba(212, 175, 55, 0.14);
  border: 1px solid rgba(212, 175, 55, 0.35);
  border-radius: 12px;
  color: var(--text);
  cursor: pointer;
  font-size: 13px;
  font-weight: 600;
  box-shadow: 0 6px 20px rgba(212, 175, 55, 0.08);
}

.voice-join-primary {
  background: linear-gradient(135deg, rgba(121, 223, 255, 0.18), rgba(138, 123, 255, 0.14));
  border-color: rgba(121, 223, 255, 0.4);
}

.voice-join.voice-leave {
  background: rgba(255, 99, 99, 0.2);
  border-color: rgba(255, 99, 99, 0.5);
}

.voice-chat-panel {
  width: 360px;
  display: flex;
  flex-direction: column;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 18px;
  background: rgba(10, 15, 26, 0.48);
  overflow: hidden;
  min-height: 0;
}

.voice-control-dock {
  position: absolute;
  left: 50%;
  bottom: 24px;
  transform: translateX(-50%);
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 8px 10px;
  background:
    linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01)),
    rgba(8, 12, 20, 0.84);
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 18px;
  box-shadow: 0 14px 36px rgba(0, 0, 0, 0.34);
  backdrop-filter: blur(16px) saturate(118%);
  z-index: 8;
}

:root[data-theme-v2='true'][data-theme-glass='off'] .voice-control-dock,
:root[data-theme-v2='true'][data-theme-glass='off'] .voice-channel-header-panel,
:root[data-theme-v2='true'][data-theme-glass='off'] .voice-channel-empty,
:root[data-theme-v2='true'][data-theme-glass='off'] .voice-chat-panel {
  background-image: none !important;
}

.voice-control-group {
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.voice-control-group + .voice-control-group {
  padding-left: 8px;
  margin-left: 2px;
  border-left: 1px solid rgba(255,255,255,0.08);
}

.voice-control-btn {
  border: 1px solid rgba(163, 191, 239, 0.1);
  background: rgba(255, 255, 255, 0.04);
  color: var(--text-muted);
  padding: 7px 11px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  transition: background 120ms ease, border-color 120ms ease, color 120ms ease, transform 120ms ease;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.voice-control-btn .voice-btn-label-short {
  display: none;
}

.voice-control-btn:hover:not(:disabled) {
  color: var(--text);
  border-color: rgba(163, 191, 239, 0.18);
  background: rgba(255, 255, 255, 0.07);
  transform: translateY(-1px);
}

.voice-control-btn.is-active {
  color: var(--text);
  background: rgba(212, 175, 55, 0.12);
  border-color: rgba(212, 175, 55, 0.28);
}

.voice-control-btn-share.is-active {
  background: linear-gradient(135deg, rgba(121, 223, 255, 0.14), rgba(138, 123, 255, 0.14));
  border-color: rgba(121, 223, 255, 0.34);
}

.voice-control-btn:disabled {
  opacity: 0.55;
  cursor: not-allowed;
}

.voice-devices-popover {
  position: absolute;
  bottom: 58px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(8, 12, 20, 0.96);
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 14px;
  padding: 10px;
  display: grid;
  gap: 8px;
  min-width: 240px;
  z-index: 12;
}

.voice-devices-popover label {
  display: grid;
  gap: 4px;
  font-size: 11px;
  color: var(--text-faint);
}

.voice-devices-popover select {
  background: rgba(6, 10, 18, 0.6);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-sm);
  color: var(--text);
  font-size: 12px;
  padding: 6px 8px;
}

.voice-more-popover {
  position: absolute;
  bottom: 58px;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(8, 12, 20, 0.95);
  border: 1px solid var(--stroke);
  border-radius: 14px;
  padding: 10px 12px;
  min-width: 160px;
  display: grid;
  gap: 6px;
  z-index: 12;
}

