}

.profile-popover-sprite-wrap {
  display: flex;
  justify-content: flex-start;
}

.profile-popover-sprite {
  border-radius: 12px;
  border: 1px solid rgba(255, 255, 255, 0.12);
  background: rgba(8, 12, 20, 0.42);
}

