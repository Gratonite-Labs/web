  .app-layout > .layout-rail-shell,
  .app-layout > .layout-channel-shell {
    display: flex !important;
    flex-direction: column !important;
    height: 100% !important;
    min-height: 100% !important;
    max-height: 100% !important;
    overflow: hidden !important;
    align-self: stretch !important;
  }

  .app-layout > .layout-rail-shell > .guild-rail,
  .app-layout > .layout-channel-shell > .channel-sidebar {
    flex: 1 1 auto !important;
    height: 100% !important;
    min-height: 100% !important;
    max-height: 100% !important;
    align-self: stretch !important;
  }

  .app-layout > .layout-rail-shell {
    background:
      radial-gradient(circle at 50% 0%, rgba(121, 223, 255, 0.06), transparent 32%),
      linear-gradient(180deg, rgba(255,255,255,0.02), transparent 20%),
      rgba(8, 12, 20, 0.95) !important;
    border-right: 1px solid var(--stroke) !important;
  }

  .app-layout > .layout-channel-shell {
    background:
      linear-gradient(180deg, rgba(121, 223, 255, 0.035), transparent 22%),
      linear-gradient(210deg, rgba(138, 123, 255, 0.045), transparent 45%),
      rgba(13, 19, 32, 0.94) !important;
    border-right: 1px solid color-mix(in srgb, var(--stroke) 85%, transparent) !important;
  }

  :root[data-theme-v2='true'] .app-layout > .layout-rail-shell,
  :root[data-theme-v2='true'] .app-layout > .layout-channel-shell {
    backdrop-filter: blur(18px) saturate(122%) !important;
  }

  :root[data-theme-v2='true'] .app-layout > .layout-rail-shell > .guild-rail,
  :root[data-theme-v2='true'] .app-layout > .layout-channel-shell > .channel-sidebar {
    background: transparent !important;
    border-right: none !important;
    backdrop-filter: none !important;
  }
}

@media (min-width: 901px) and (max-height: 860px) {
  .guild-rail {
    gap: 6px;
    padding-top: 8px;
    padding-bottom: 8px;
  }

  .guild-rail-list {
    gap: 6px;
  }

  .guild-rail-divider {
    margin: 2px 0;
  }

  .guild-rail-divider-bottom {
    margin-top: 4px;
  }

  .guild-rail-footer {
    gap: 6px;
    margin-top: 4px;
    padding-bottom: 0;
  }
}

.auth-submit {
  margin-top: 8px;
  width: 100%;
}

.auth-link {
  font-size: 13px;
  color: var(--text-muted);
  text-align: center;
}

.auth-link a {
  color: var(--accent);
  font-weight: 500;
}

/* ==========================================================================
   App Layout (3-column grid, optional 4th for member panel)
   ========================================================================== */

.app-layout {
  display: grid;
  grid-template-columns: var(--guild-rail-width) var(--channel-sidebar-width) 1fr;
  grid-template-rows: minmax(0, 1fr);
  align-items: stretch;
  height: 100vh;
  height: 100dvh;
  min-height: 100vh;
  min-height: 100dvh;
  max-height: 100vh;
  max-height: 100dvh;
  overflow: hidden;
  min-width: 0;
}

.layout-rail-shell,
.layout-channel-shell {
  display: flex;
  flex-direction: column;
  min-width: 0;
  min-height: 0;
  height: 100%;
  align-self: stretch;
  overflow: hidden;
}

.layout-rail-shell {
  position: relative;
  z-index: 15;
  isolation: isolate;
  background:
    radial-gradient(circle at 50% 0%, rgba(121, 223, 255, 0.06), transparent 32%),
    linear-gradient(180deg, rgba(255,255,255,0.02), transparent 20%),
    rgba(8, 12, 20, 0.95);
  border-right: 1px solid var(--stroke);
}

.layout-channel-shell {
  background:
    linear-gradient(180deg, rgba(121, 223, 255, 0.035), transparent 22%),
    linear-gradient(210deg, rgba(138, 123, 255, 0.045), transparent 45%),
    rgba(13, 19, 32, 0.94);
  border-right: 1px solid color-mix(in srgb, var(--stroke) 85%, transparent);
  transition: width 0.18s ease, min-width 0.18s ease;
  overflow: hidden;
}

.app-layout.sidebar-collapsed {
  grid-template-columns: var(--guild-rail-width) 0 1fr;
}

/* DM context: show channel sidebar by default */
.app-layout.dm-context {
  grid-template-columns: var(--guild-rail-width) var(--channel-sidebar-width) 1fr;
}

/* DM context + collapsed: hide channel sidebar */
.app-layout.dm-context.sidebar-collapsed {
  grid-template-columns: var(--guild-rail-width) 0 1fr;
}


.app-layout.member-panel-open {
  grid-template-columns: var(--guild-rail-width) var(--channel-sidebar-width) 1fr 240px;
}

.app-layout.sidebar-collapsed.member-panel-open {
  grid-template-columns: var(--guild-rail-width) 0 1fr 240px;
}

.app-main {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  background: var(--bg);
  min-height: 0;
  min-width: 0;
}

.mobile-shell-backdrop,
.mobile-bottom-nav {
  display: none;
}

/* ==========================================================================
   Guild Rail
   ========================================================================== */

.guild-rail {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding: 12px 0;
  background: transparent;
  border-right: none;
  box-shadow: inset -1px 0 0 rgba(255,255,255,0.02);
  position: relative;
  z-index: 2;
  overflow: hidden;
  flex: 1 1 auto;
  height: 100%;
  max-height: 100%;
  min-height: 100%;
}

.guild-rail-item {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48px;
  height: 48px;
  text-decoration: none;
  border-radius: 16px;
}

.guild-rail-icon {
  width: 48px;
  height: 48px;
  display: grid;
  place-items: center;
}

.guild-rail-item::before {
  content: '';
  position: absolute;
  left: -12px;
  width: 4px;
  height: 0;
  background: var(--text);
  border-radius: 0 2px 2px 0;
  transition: height 0.2s ease;
}

.guild-rail-item:hover::before {
  height: 20px;
}

.guild-rail-item.active::before,
.guild-rail-item-active::before {
  height: 36px !important;
}

.guild-rail-home-icon {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-lg);
  background: var(--gradient-primary);
  display: grid;
  place-items: center;
  transition: border-radius 0.2s ease;
}

.guild-rail-home-icon:hover {
  border-radius: var(--radius-md);
}

/* Subtle dimming when DM sidebar is collapsed to hint toggle state */
.guild-rail-home.is-dm-home .guild-rail-home-icon {
  cursor: pointer;
}

.sidebar-collapsed .guild-rail-home.is-dm-home .guild-rail-home-icon {
  opacity: 0.7;
  box-shadow: 0 0 0 2px rgba(121, 223, 255, 0.25);
}

.sidebar-collapsed .guild-rail-home.is-dm-home .guild-rail-home-icon:hover {
  opacity: 1;
}

.guild-rail-utility-icon {
  border-radius: 14px;
  border: 1px solid rgba(163, 191, 239, 0.12);
  background:
    linear-gradient(180deg, rgba(255,255,255,0.03), rgba(255,255,255,0.01)),
    rgba(10, 16, 28, 0.56);
  color: var(--text-muted);
  transition: border-color 0.16s ease, color 0.16s ease, transform 0.16s ease, background 0.16s ease;
}

.guild-rail-item:hover .guild-rail-utility-icon {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.2);
  background: rgba(121, 223, 255, 0.08);
}

.guild-rail-item.active .guild-rail-utility-icon,
.guild-rail-item-active .guild-rail-utility-icon {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.28);
  background: linear-gradient(135deg, rgba(121,223,255,0.12), rgba(138,123,255,0.1));
}

.guild-rail-divider {
  width: 32px;
  height: 2px;
  background: var(--stroke);
  border-radius: 1px;
  margin: 4px 0;
}

.guild-rail-profile-slot {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  position: relative;
  z-index: 20;
  overflow: visible;
}

.guild-rail-list {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  flex: 1 1 auto;
  min-height: 0;
  width: 100%;
  overflow-y: auto;
  overflow-x: visible;
  scrollbar-width: none;
  overscroll-behavior: contain;
}

.guild-rail-list::-webkit-scrollbar {
  display: none;
}

.guild-rail-add-icon {
  width: 48px;
  height: 48px;
  border-radius: var(--radius-lg);
  border: 1px dashed var(--stroke-strong);
  display: grid;
  place-items: center;
  font-size: 22px;
  color: var(--accent);
  background: transparent;
  transition: all 0.2s ease;
}

.guild-rail-add:hover .guild-rail-add-icon {
  background: rgba(212, 175, 55, 0.08);
  border-radius: var(--radius-md);
}

.guild-rail-add {
  background: none;
  border: none;
  padding: 0;
}

.guild-rail-create-join {
  margin-bottom: 2px;
}

.guild-rail-divider-bottom {
  margin-top: 10px;
  flex-shrink: 0;
}

.guild-rail-spacer {
  display: none;
}

.guild-rail-footer {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  padding-bottom: 4px;
  margin-top: 8px;
  width: 100%;
  position: relative;
  z-index: 5;
  flex-shrink: 0;
}

.guild-rail-settings-icon {
  border-color: rgba(138, 123, 255, 0.22);
  background:
    linear-gradient(180deg, rgba(138,123,255,0.08), rgba(121,223,255,0.05)),
    rgba(10, 16, 28, 0.58);
}

/* ==========================================================================
   Channel Sidebar
   ========================================================================== */

.channel-sidebar {
  display: flex;
  flex-direction: column;
  background: transparent;
  border-right: none;
  box-shadow: inset -1px 0 0 rgba(255, 255, 255, 0.015);
  overflow: hidden;
  flex: 1 1 auto;
  height: 100%;
  max-height: 100%;
  min-height: 100%;
}

.channel-sidebar-header {
  position: relative;
  border-bottom: 1px solid color-mix(in srgb, var(--stroke) 85%, transparent);
  flex-shrink: 0;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.015), transparent);
  display: grid;
  gap: 8px;
  padding-bottom: 10px;
}

.channel-sidebar-guild-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  padding: 14px 16px 0;
  background: none;
  border: none;
  color: var(--text);
  cursor: pointer;
  transition: background 0.16s ease, color 0.16s ease;
}

.channel-sidebar-guild-btn:hover {
  background: linear-gradient(90deg, rgba(121, 223, 255, 0.06), rgba(138, 123, 255, 0.04));
}

.channel-sidebar-guild-btn.is-static {
  cursor: default;
}

.channel-sidebar-header-actions {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 0 12px;
  flex-wrap: wrap;
}

.channel-sidebar-header-action {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(255,255,255,0.025);
  color: var(--text-muted);
  border-radius: 10px;
  padding: 6px 9px;
  font-size: 11px;
  font-weight: 600;
  cursor: pointer;
  transition: border-color 0.16s ease, color 0.16s ease, background 0.16s ease;
}

.channel-sidebar-header-action:hover {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.22);
  background: rgba(121, 223, 255, 0.07);
}

.channel-sidebar-guild-name {
  font-size: 15px;
  font-weight: 700;
  letter-spacing: 0.02em;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.channel-sidebar-chevron {
  font-size: 10px;
  color: var(--text-muted);
}

/* Guild header dropdown */
.channel-sidebar-dropdown {
  position: absolute;
  top: 100%;
  left: 8px;
  right: 8px;
  z-index: 100;
  background: var(--bg-float);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  padding: 6px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.35);
}

.dropdown-item {
  display: block;
  width: 100%;
  padding: 8px 10px;
  background: none;
  border: none;
  border-radius: var(--radius-sm);
  color: var(--text-muted);
  font-size: 13px;
  font-family: inherit;
  text-align: left;
  cursor: pointer;
  transition: all 0.1s ease;
}

.dropdown-item:hover {
  background: rgba(212, 175, 55, 0.08);
  color: var(--text);
}

.dropdown-danger {
  color: var(--danger);
}

.dropdown-danger:hover {
  background: var(--danger-bg);
  color: var(--danger);
}

.dropdown-divider {
  height: 1px;
  background: var(--stroke);
  margin: 4px 0;
}

.channel-sidebar-list {
  flex: 1;
  overflow-y: auto;
  padding: 10px 8px 8px;
  scrollbar-width: thin;
  scrollbar-color: var(--stroke) transparent;
}

.channel-empty {
  padding: 10px 10px 6px;
  color: var(--text-faint);
  font-size: 12px;
}

/* DM action buttons (New DM + Add Friend) */
.dm-action-buttons {
  display: flex;
  gap: 6px;
  padding: 8px 8px 4px;
}

.dm-action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  padding: 7px 10px;
  border-radius: 8px;
  background: var(--bg-soft);
  border: 1px solid var(--stroke);
  color: var(--text-muted);
  font-size: 12px;
  font-weight: 500;
  font-family: var(--font-sans);
  cursor: pointer;
  transition: background 0.15s ease, color 0.15s ease, border-color 0.15s ease;
}

.dm-action-btn:hover {
  background: var(--bg-elevated);
  color: var(--text);
  border-color: var(--stroke-strong);
}

/* New DM / Add Friend modal results */
.new-dm-results {
  max-height: 240px;
  overflow-y: auto;
  margin-top: 8px;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.new-dm-searching,
.new-dm-empty {
  padding: 16px;
  text-align: center;
  color: var(--text-faint);
  font-size: 13px;
}

.new-dm-user-row {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px 10px;
  border-radius: 8px;
  border: none;
  background: none;
  color: var(--text);
  cursor: pointer;
  font-family: var(--font-sans);
  text-align: left;
  width: 100%;
  transition: background 0.12s ease;
}

.new-dm-user-row:hover {
  background: var(--bg-soft);
}

.new-dm-user-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
}

.new-dm-user-display {
  font-weight: 500;
  font-size: 14px;
  color: var(--text);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.new-dm-user-username {
  font-size: 12px;
  color: var(--text-faint);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.add-friend-row {
  cursor: default;
}

.modal-success {
  padding: 8px 12px;
  border-radius: 8px;
  background: rgba(20, 184, 166, 0.12);
  border: 1px solid rgba(20, 184, 166, 0.3);
  color: #5eead4;
  font-size: 13px;
  margin-bottom: 8px;
}

.channel-sidebar-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 9px 8px 5px;
}

.channel-sidebar-section-title {
  font-size: 10px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.12em;
  color: var(--text-faint);
}

.channel-sidebar-section-toggle .channel-sidebar-section-title {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  background: none;
  border: none;
  color: inherit;
  font: inherit;
  padding: 0;
  cursor: pointer;
}

.channel-drag-handle {
  font-size: 12px;
  color: var(--text-faint);
  opacity: 0.6;
  margin-right: 4px;
}

.channel-item:hover .channel-drag-handle {
  opacity: 1;
}

.channel-sidebar-add {
  width: 22px;
  height: 22px;
  border-radius: 6px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: linear-gradient(180deg, rgba(121, 223, 255, 0.08), rgba(138, 123, 255, 0.05));
  color: var(--text);
  cursor: pointer;
  font-size: 14px;
  line-height: 1;
  display: grid;
  place-items: center;
  transition: all 0.15s ease;
}

.channel-sidebar-add:hover {
  background: linear-gradient(180deg, rgba(121, 223, 255, 0.16), rgba(138, 123, 255, 0.1));
}

/* Channel category */
.channel-category {
  margin-top: 16px;
}

.channel-category:first-child {
  margin-top: 0;
}

.channel-category-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 8px;
  margin-bottom: 4px;
}

.channel-category-name {
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-faint);
}

.channel-category-add {
  width: 20px;
  height: 20px;
  border-radius: 6px;
  border: 1px solid transparent;
  background: none;
  color: var(--text-faint);
  cursor: pointer;
  font-size: 14px;
  line-height: 1;
  display: grid;
  place-items: center;
  transition: all 0.15s ease;
}

.channel-category-add:hover {
  color: var(--text);
  border-color: var(--stroke);
  background: rgba(212, 175, 55, 0.08);
}

/* Channel item */
.channel-item {
  display: flex;
  align-items: center;
  align-content: flex-start;
  flex-wrap: wrap;
  gap: 6px;
  padding: 7px 9px;
  border-radius: 10px;
  border: 1px solid transparent;
  color: var(--text-muted);
  font-size: 14px;
  text-decoration: none;
  transition: all 0.14s ease;
}

.channel-item:hover {
  background: linear-gradient(90deg, rgba(121, 223, 255, 0.05), rgba(138, 123, 255, 0.03));
  border-color: rgba(163, 191, 239, 0.08);
  color: var(--text);
  text-decoration: none;
}

.channel-item-active {
  background: linear-gradient(90deg, rgba(121, 223, 255, 0.11), rgba(138, 123, 255, 0.08)) !important;
  border-color: rgba(121, 223, 255, 0.18);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.025);
  color: var(--text) !important;
}

.channel-icon {
  width: 20px;
  text-align: center;
  font-size: 14px;
  flex-shrink: 0;
  opacity: 0.7;
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.channel-icon-lock {
  opacity: 0.85;
  color: var(--text-muted);
}

.channel-lock-badge {
  position: absolute;
  bottom: -3px;
  right: -5px;
  font-size: 8px;
  line-height: 1;
}

.channel-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  min-width: 0;
  flex: 1 1 auto;
}

.channel-unread-dot,
.channel-unread-badge {
  margin-left: auto;
}

.channel-unread-badge {
  min-width: 18px;
  height: 18px;
  border-radius: 999px;
  padding: 0 5px;
  display: grid;
  place-items: center;
  background: color-mix(in srgb, var(--accent) 22%, transparent);
  border: 1px solid color-mix(in srgb, var(--accent) 44%, transparent);
  color: var(--text);
  font-size: 10px;
  font-weight: 700;
  line-height: 1;
  box-shadow: 0 0 10px rgba(121, 223, 255, 0.24);
}

.channel-voice-presence {
  width: 100%;
  margin-left: 26px;
  display: grid;
  gap: 2px;
  padding-top: 3px;
  border-left: 1px dashed rgba(163, 191, 239, 0.14);
  padding-left: 7px;
}

.channel-voice-presence-item {
  display: flex;
  align-items: center;
  gap: 6px;
  min-width: 0;
  font-size: 11px;
  color: var(--text-faint);
}

.channel-voice-presence-dot {
  width: 5px;
  height: 5px;
  border-radius: 999px;
  background: color-mix(in srgb, var(--accent) 72%, white 10%);
  opacity: 0.9;
  flex-shrink: 0;
}

.channel-voice-presence-name {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.channel-voice-presence-more {
  margin-left: 11px;
}

/* ==========================================================================
   Top Bar
   ========================================================================== */

.topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16px;
  height: var(--topbar-height);
  border-bottom: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background:
    linear-gradient(90deg, rgba(121, 223, 255, 0.05), transparent 35%),
    linear-gradient(270deg, rgba(138, 123, 255, 0.035), transparent 40%),
    rgba(17, 24, 40, 0.9);
  backdrop-filter: blur(14px) saturate(118%);
  flex-shrink: 0;
}

.topbar-info {
  display: flex;
  align-items: center;
  gap: 8px;
  min-width: 0;
  flex: 1 1 auto;
}

.topbar-mobile-nav {
  display: none;
  align-items: center;
  gap: 6px;
}

.topbar-btn-mobile-nav {
  padding: 6px;
}

.topbar-dm-info {
  display: flex;
  align-items: center;
  gap: 10px;
  min-width: 0;
  flex: 1 1 auto;
}

.topbar-dm-info > div {
  min-width: 0;
}

.topbar-dm-avatar {
  border-radius: 10px;
  background: rgba(212, 175, 55, 0.12);
  border: 1px solid rgba(212, 175, 55, 0.2);
}

.topbar-dm-name {
  font-size: 14px;
  font-weight: 600;
  color: var(--text);
}

.topbar-dm-meta {
  font-size: 11px;
  color: var(--text-muted);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topbar-hash {
  color: var(--text-faint);
  font-size: 20px;
  font-weight: 600;
  opacity: 0.8;
}

.topbar-channel-name {
  font-size: 15px;
  font-weight: 700;
  letter-spacing: 0.01em;
  white-space: nowrap;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topbar-divider {
  width: 1px;
  height: 20px;
  background: var(--stroke);
}

.topbar-topic {
  font-size: 12px;
  color: var(--text-muted);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topbar-actions {
  display: flex;
  gap: 8px;
  align-items: center;
  min-width: 0;
  flex: 1 1 auto;
  justify-content: flex-end;
}

.topbar-btn {
  background: rgba(255, 255, 255, 0.02);
  border: 1px solid rgba(163, 191, 239, 0.08);
  color: var(--text-muted);
  font-size: 18px;
  padding: 6px;
  border-radius: 10px;
  transition: all 0.14s ease;
  flex-shrink: 0;
}

:root[data-theme-v2='true'] .topbar {
  box-shadow: inset 0 -1px 0 rgba(255,255,255,0.02);
}

:root[data-theme-v2='true'] .topbar-btn {
  border-color: rgba(255,255,255,0.06);
  background: rgba(255,255,255,0.024);
}

.topbar-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* ==========================================================================
   DM Call Overlay
   ========================================================================== */

.dm-call-overlay {
  position: fixed;
  right: 16px;
  bottom: 16px;
  width: 320px;
  z-index: 220;
}

.dm-call-card {
  background: rgba(14, 21, 34, 0.95);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  padding: 14px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.45);
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.dm-call-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
}

.dm-call-title {
  font-size: 14px;
  font-weight: 600;
  color: var(--text);
}

.dm-call-subtitle {
  font-size: 11px;
  color: var(--text-muted);
  margin-top: 4px;
}

.dm-call-end {
  background: rgba(255, 107, 107, 0.15);
  border: 1px solid rgba(255, 107, 107, 0.35);
  color: var(--danger);
  border-radius: 999px;
  padding: 6px 12px;
  font-size: 12px;
  cursor: pointer;
}

.dm-call-body {
  display: grid;
  gap: 8px;
}

.dm-call-grid {
  display: grid;
  gap: 8px;
  grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
}

.dm-call-video {
  position: relative;
  height: 160px;
  border-radius: var(--radius-md);
  overflow: hidden;
  background: rgba(0, 0, 0, 0.4);
  border: 1px solid rgba(255, 255, 255, 0.08);
  display: grid;
  place-items: center;
  color: var(--text-faint);
  font-size: 12px;
}

.dm-call-video video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.dm-call-controls {
  display: flex;
  gap: 10px;
}

.dm-call-btn {
  flex: 1;
  padding: 8px 12px;
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.04);
  color: var(--text);
  font-size: 12px;
  cursor: pointer;
}

.dm-call-btn.is-active {
  border-color: rgba(212, 175, 55, 0.5);
  box-shadow: 0 0 10px rgba(212, 175, 55, 0.2);
}

/* Call nameplates + quality */
.video-nameplate {
  position: absolute;
  bottom: 8px;
  left: 8px;
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 4px 8px;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 4px;
  font-size: 13px;
  color: #fff;
}

.quality-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  flex-shrink: 0;
}

/* ==========================================================================
   Incoming Call
   ========================================================================== */

.dm-call-incoming {
  position: fixed;
  left: 16px;
  bottom: 16px;
  z-index: 230;
}

.dm-call-incoming-card {
  background: rgba(14, 21, 34, 0.95);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  padding: 14px 16px;
  box-shadow: 0 16px 32px rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  gap: 10px;
  width: 280px;
}

.dm-call-incoming-title {
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
}

.dm-call-incoming-from {
  font-size: 12px;
  color: var(--text-muted);
}

.dm-call-incoming-actions {
  display: flex;
  gap: 10px;
}

.dm-call-incoming-btn {
  flex: 1;
  padding: 8px 12px;
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  background: rgba(255, 255, 255, 0.04);
  color: var(--text);
  font-size: 12px;
  cursor: pointer;
}

.dm-call-incoming-btn.accept {
  border-color: rgba(212, 175, 55, 0.4);
  background: rgba(212, 175, 55, 0.12);
}

.dm-call-incoming-btn.decline {
  border-color: rgba(255, 107, 107, 0.35);
  background: rgba(255, 107, 107, 0.12);
}

.topbar-btn:hover {
  background: linear-gradient(180deg, rgba(121, 223, 255, 0.08), rgba(138, 123, 255, 0.05));
  border-color: rgba(163, 191, 239, 0.16);
  color: var(--text);
}

/* ==========================================================================
   Channel Page
   ========================================================================== */

.channel-page {
  display: flex;
  flex-direction: column;
  height: 100%;
  min-height: 0;
  overflow: hidden;
}

/* ==========================================================================
   Message List
   ========================================================================== */

.message-list {
  flex: 1;
  overflow-y: auto;
  padding: 14px 0 18px;
  scroll-behavior: smooth;
  scrollbar-width: thin;
  scrollbar-color: var(--stroke) transparent;
}

.message-list-loading,
.message-list-empty {
  display: grid;
  place-items: center;
  flex: 1;
  padding: 40px;
  color: var(--text-muted);
  font-size: 14px;
}

.message-list-empty-title {
  font-size: 16px;
  font-weight: 600;
  color: var(--text);
}

.message-list-empty-subtitle {
  margin-top: 6px;
  font-size: 12px;
  color: var(--text-muted);
}

.message-list-loader {
  display: flex;
  justify-content: center;
  padding: 12px;
}

.message-list-beginning {
  text-align: center;
  padding: 16px;
  font-size: 13px;
  color: var(--text-faint);
  border: 1px solid rgba(163, 191, 239, 0.1);
  background: rgba(255, 255, 255, 0.015);
  border-radius: 12px;
  margin: 0 16px 10px;
}

/* ==========================================================================
   Message Item
   ========================================================================== */

.message-item {
  position: relative;
  display: grid;
  grid-template-columns: 40px 1fr;
  gap: 12px;
  padding: 3px 14px;
  margin: 0 8px;
  border-radius: 12px;
  border: 1px solid transparent;
  transition: background 0.14s ease, border-color 0.14s ease, transform 0.14s ease;
}

.message-item:hover {
  background: linear-gradient(90deg, rgba(121, 223, 255, 0.04), rgba(138, 123, 255, 0.03));
  border-color: rgba(163, 191, 239, 0.08);
  transform: translateY(-1px);
}

/* First message in a group gets more top padding */
.message-item:not(.message-item-grouped) {
  padding-top: 8px;
  margin-top: 5px;
}

.message-item-grouped {
  grid-template-columns: 40px 1fr;
  padding-top: 1px;
  padding-bottom: 1px;
}

.message-item-grouped .message-timestamp-inline {
  grid-column: 1;
  text-align: right;
  font-size: 10px;
  color: var(--text-faint);
  opacity: 0;
  transition: opacity 0.1s ease;
  padding-top: 3px;
}

.message-item-grouped:hover .message-timestamp-inline {
  opacity: 1;
}

.message-avatar {
  margin-top: 2px;
}

.message-avatar-sprite-button {
  margin-top: 2px;
  border: 0;
  padding: 0;
  background: transparent;
  cursor: pointer;
}

.message-avatar-sprite {
  display: block;
  border-radius: 10px;
}

.message-body {
  min-width: 0;
}

.message-header {
  display: flex;
  align-items: baseline;
  gap: 8px;
  flex-wrap: wrap;
}

.message-author {
  font-weight: 700;
  font-size: 14px;
  color: var(--text);
  cursor: pointer;
}

.message-timestamp {
  font-size: 11px;
  color: var(--text-faint);
}

.message-edited {
  font-size: 10px;
  color: var(--text-faint);
}

.message-content {
  font-size: 14px;
  color: var(--text);
  line-height: 1.5;
  word-wrap: break-word;
  overflow-wrap: break-word;
  white-space: pre-wrap;
}

.markdown-content {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.markdown-paragraph {
  margin: 0;
}

.markdown-h1,
.markdown-h2,
.markdown-h3 {
  margin: 0;
  line-height: 1.3;
  color: var(--text);
}

.markdown-h1 {
  font-size: 20px;
  font-weight: 700;
}

.markdown-h2 {
  font-size: 17px;
  font-weight: 700;
}

.markdown-h3 {
  font-size: 15px;
  font-weight: 700;
}

.markdown-list {
  margin: 0;
  padding-left: 18px;
  display: grid;
  gap: 4px;
}

.markdown-list li {
  margin: 0;
}

.markdown-quote {
  margin: 0;
  padding: 6px 10px;
  border-left: 3px solid rgba(212, 175, 55, 0.45);
  background: rgba(212, 175, 55, 0.08);
  border-radius: 0 8px 8px 0;
  color: var(--text-muted);
}

.markdown-codeblock {
  margin: 0;
  padding: 10px 12px;
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(6, 10, 18, 0.78);
  color: #d7e6ff;
  overflow-x: auto;
  font-size: 12px;
  line-height: 1.5;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', monospace;
}

.markdown-inline-code {
  padding: 1px 5px;
  border-radius: 6px;
  border: 1px solid var(--stroke);
  background: rgba(6, 10, 18, 0.7);
  font-size: 0.92em;
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', monospace;
}

.markdown-custom-emoji {
  display: inline-block;
  vertical-align: middle;
  width: 1.5em;
  height: 1.5em;
  object-fit: contain;
  margin: 0 2px;
}

.markdown-link {
  color: var(--accent);
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 2px;
}

.markdown-mention {
  display: inline-flex;
  align-items: center;
  padding: 1px 5px;
  border-radius: 6px;
  border: 1px solid color-mix(in srgb, var(--accent) 30%, transparent);
  background: color-mix(in srgb, var(--accent) 14%, transparent);
  color: color-mix(in srgb, var(--accent) 80%, white);
  font-weight: 600;
}

/* Mention as clickable link */
.mention-link {
  cursor: pointer;
  font-family: inherit;
  font-size: inherit;
  line-height: inherit;
  transition: background 0.15s ease, border-color 0.15s ease;
}

.mention-link:hover {
  background: color-mix(in srgb, var(--accent) 28%, transparent);
  border-color: color-mix(in srgb, var(--accent) 50%, transparent);
  text-decoration: underline;
  text-underline-offset: 2px;
}

.markdown-role-mention {
  border-color: rgba(104, 223, 255, 0.28);
  background: rgba(104, 223, 255, 0.12);
  color: #b8f3ff;
}

/* ==========================================================================
   Display Name Styles
   ========================================================================== */

.display-name-style {
  --dns-color-a: #68d7ff;
  --dns-color-b: #ffcb7f;
  display: inline-block;
}

.dns-font-tempo { font-family: 'Space Grotesk', sans-serif; font-weight: 700; }
.dns-font-sakura { font-family: 'Comic Sans MS', 'Chalkboard SE', cursive; font-weight: 700; }
.dns-font-jellybean { font-family: 'Trebuchet MS', 'Segoe UI', sans-serif; font-weight: 700; }
.dns-font-modern { font-family: 'Space Grotesk', 'Segoe UI', sans-serif; letter-spacing: 0.01em; }
.dns-font-medieval { font-family: 'Times New Roman', 'Georgia', serif; font-weight: 700; letter-spacing: 0.02em; }
.dns-font-bit8 { font-family: 'Courier New', monospace; letter-spacing: 0.04em; text-transform: uppercase; }
.dns-font-vampyre { font-family: 'Georgia', serif; font-weight: 700; letter-spacing: 0.03em; }
.dns-font-arcade { font-family: 'Impact', 'Arial Black', sans-serif; letter-spacing: 0.02em; }

.dns-effect-solid {
  color: var(--dns-color-a);
}

.dns-effect-gradient {
  background: linear-gradient(120deg, var(--dns-color-a), var(--dns-color-b));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.dns-effect-neon {
  color: var(--dns-color-a);
  text-shadow:
    0 0 6px color-mix(in srgb, var(--dns-color-a) 70%, white),
    0 0 16px color-mix(in srgb, var(--dns-color-b) 40%, transparent);
}

.dns-effect-toon {
  color: var(--dns-color-a);
  text-shadow:
    -1px -1px 0 rgba(0, 0, 0, 0.6),
    1px -1px 0 rgba(0, 0, 0, 0.6),
    -1px 1px 0 rgba(0, 0, 0, 0.6),
    1px 1px 0 rgba(0, 0, 0, 0.6);
}

.dns-effect-pop {
  color: var(--dns-color-a);
  text-shadow: 0 2px 0 color-mix(in srgb, var(--dns-color-b) 45%, transparent);
  animation: dnsPop 1.4s ease-in-out infinite;
}

@keyframes dnsPop {
  0%, 100% { transform: translateY(0) scale(1); }
  40% { transform: translateY(-1px) scale(1.03); }
  70% { transform: translateY(0) scale(0.99); }
}

.dns-message-context {
  color: inherit;
  background: none;
  -webkit-text-fill-color: currentColor;
  text-shadow: none;
  animation: none;
}

.message-item:hover .dns-message-context.dns-effect-solid {
  color: var(--dns-color-a);
}

.message-item:hover .dns-message-context.dns-effect-gradient {
  background: linear-gradient(120deg, var(--dns-color-a), var(--dns-color-b));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.message-item:hover .dns-message-context.dns-effect-neon {
  color: var(--dns-color-a);
  text-shadow:
    0 0 6px color-mix(in srgb, var(--dns-color-a) 70%, white),
    0 0 16px color-mix(in srgb, var(--dns-color-b) 40%, transparent);
}

.message-item:hover .dns-message-context.dns-effect-toon {
  color: var(--dns-color-a);
  text-shadow:
    -1px -1px 0 rgba(0, 0, 0, 0.6),
    1px -1px 0 rgba(0, 0, 0, 0.6),
    -1px 1px 0 rgba(0, 0, 0, 0.6),
    1px 1px 0 rgba(0, 0, 0, 0.6);
}

.message-item:hover .dns-message-context.dns-effect-pop {
  color: var(--dns-color-a);
  text-shadow: 0 2px 0 color-mix(in srgb, var(--dns-color-b) 45%, transparent);
  animation: dnsPop 1.4s ease-in-out infinite;
}

.dns-preview {
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(10, 16, 28, 0.72);
  padding: 12px;
  display: grid;
  gap: 6px;
}

.dns-preview-light {
  background: #f4f7fb;
  border-color: #d3dceb;
}

.dns-preview-label {
  color: var(--text-faint);
  font-size: 11px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.dns-preview-light .dns-preview-label {
  color: #607089;
}

.dns-preview-name {
  color: var(--text);
  font-size: 24px;
  font-weight: 700;
}

.dns-preview-light .dns-preview-name {
  color: #101726;
}

.display-name-nameplate {
  display: inline-flex;
  align-items: center;
  min-height: 1.6rem;
  padding: 0.15rem 0.55rem;
  border-radius: 999px;
}

.nameplate-from-asset {
  background-image:
    linear-gradient(110deg, rgba(255, 255, 255, 0.14), rgba(255, 255, 255, 0.02)),
    var(--nameplate-image);
  background-size: cover;
  background-position: center;
  box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.24), 0 8px 22px rgba(0, 0, 0, 0.26);
}

.dns-editor {
  border-top: 1px solid var(--stroke);
  padding-top: 12px;
  display: grid;
  gap: 10px;
}

.dns-colors {
  grid-template-columns: repeat(2, minmax(0, 1fr));
}

.dns-color-input {
  width: 44px;
  height: 30px;
  border-radius: 8px;
  border: 1px solid var(--stroke);
  background: transparent;
  padding: 0;
}

.server-tag-badge {
  border: 1px solid rgba(212, 175, 55, 0.35);
  background: rgba(212, 175, 55, 0.12);
  color: var(--text);
  border-radius: 999px;
  padding: 2px 8px;
  font-size: 10px;
  line-height: 1.4;
  text-transform: uppercase;
  letter-spacing: 0.06em;
}

.server-tag-badge:hover {
  background: rgba(212, 175, 55, 0.2);
}

.user-bar-status {
  display: block;
  max-width: 170px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 10px;
  color: var(--text-faint);
}

.user-bar-sprite {
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.18);
  background: rgba(8, 12, 20, 0.42);
}

.member-list-sprite {
  border-radius: 10px;
  border: 1px solid rgba(255, 255, 255, 0.16);
  background: rgba(8, 12, 20, 0.35);
}

.profile-popover-server-tag {
  align-self: flex-start;
  font-size: 10px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
  color: var(--text);
  border: 1px solid rgba(212, 175, 55, 0.35);
  background: rgba(212, 175, 55, 0.12);
  border-radius: 999px;
  padding: 3px 8px;
}

.profile-popover-status {
  font-size: 12px;
  color: var(--text-muted);
  border-left: 2px solid rgba(212, 175, 55, 0.4);
  padding-left: 8px;
}

.profile-popover-widgets {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.profile-popover-widget {
  font-size: 10px;
  color: var(--text-faint);
  border: 1px solid var(--stroke);
  border-radius: 999px;
  padding: 3px 8px;
  background: rgba(6, 10, 20, 0.48);
}

/* ==========================================================================
   Message Composer
   ========================================================================== */

.message-composer {
  padding: 0 16px 16px;
  flex-shrink: 0;
}

.message-composer-row {
  display: flex;
  align-items: flex-end;
  gap: 8px;
}

.message-composer-shell {
  width: 100%;
  display: grid;
  min-width: 0;
  max-width: 100%;
  gap: 8px;
  padding: 8px;
  background:
    linear-gradient(180deg, rgba(121, 223, 255, 0.035), transparent 35%),
    linear-gradient(320deg, rgba(138, 123, 255, 0.03), transparent 40%),
    var(--bg-input);
  border: 1px solid color-mix(in srgb, var(--stroke) 92%, transparent);
  border-radius: 14px;
  box-shadow:
    inset 0 1px 0 rgba(255, 255, 255, 0.025),
    0 8px 22px rgba(5, 8, 14, 0.14);
  position: relative;
  isolation: isolate;
}

:root[data-theme-v2='true'] .message-composer-shell {
  border-color: color-mix(in srgb, var(--stroke) 80%, rgba(121, 223, 255, 0.16));
}

.message-composer-controls {
  display: flex;
  position: relative;
  align-items: flex-end;
  min-width: 0;
  gap: 8px;
  width: 100%;
  isolation: isolate;
}

.composer-mention-menu {
  position: absolute;
  left: 0;
  right: 72px;
  bottom: calc(100% + 8px);
  z-index: 40;
  display: grid;
  gap: 4px;
  padding: 6px;
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 92%, transparent);
  background: color-mix(in srgb, var(--bg-float) 96%, transparent);
  box-shadow: 0 10px 24px rgba(0, 0, 0, 0.35);
  max-height: 220px;
  overflow-y: auto;
  overscroll-behavior: contain;
}

.composer-mention-item {
  width: 100%;
  border: none;
  background: transparent;
  color: inherit;
  text-align: left;
  border-radius: 10px;
  padding: 8px 10px;
  display: grid;
  gap: 2px;
  cursor: pointer;
}

.composer-mention-item:hover,
.composer-mention-item.is-active {
  background: linear-gradient(90deg, rgba(121, 223, 255, 0.08), rgba(138, 123, 255, 0.05));
}

.composer-mention-item-label {
  color: var(--text);
  font-size: 13px;
  font-weight: 600;
}

.composer-mention-item-meta {
  color: var(--text-faint);
  font-size: 11px;
}

.composer-mention-kind {
  display: inline-flex;
  align-items: center;
  margin-left: 4px;
  padding: 1px 5px;
  border-radius: 999px;
  border: 1px solid rgba(104, 223, 255, 0.2);
  background: rgba(104, 223, 255, 0.1);
}

.composer-emoji-menu .composer-mention-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.composer-emoji-preview {
  width: 24px;
  height: 24px;
  object-fit: contain;
  border-radius: 4px;
}

.message-composer-input {
  width: 100%;
  min-width: 0;
  padding: 12px 16px;
  background: transparent;
  border: 1px solid transparent;
  border-radius: var(--radius-md);
  color: var(--text);
  font-family: inherit;
  font-size: 14px;
  outline: none;
  resize: none;
  min-height: 44px;
  max-height: 200px;
  transition:
    border-color var(--motion-fast) var(--motion-ease),
    background var(--motion-fast) var(--motion-ease),
    box-shadow var(--motion-fast) var(--motion-ease);
  scrollbar-width: thin;
}

.message-composer-input:focus {
  border-color: rgba(212, 175, 55, 0.5);
  box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 20%, transparent);
  background: color-mix(in srgb, var(--bg-input) 86%, transparent);
}

.message-composer-input::placeholder {
  color: var(--text-faint);
}

.message-emoji-btn {
  display: grid;
  place-items: center;
  width: 36px;
  height: 36px;
  border: none;
  background: transparent;
  border-radius: var(--radius-md);
  color: var(--muted);
  cursor: pointer;
  flex-shrink: 0;
  transition: color 0.15s ease, background 0.15s ease;
}

.message-emoji-btn:hover {
  color: var(--text);
  background: rgba(121, 223, 255, 0.08);
}

.message-send-btn {
  flex-shrink: 0;
  min-width: 72px;
  height: 40px;
  padding: 0 12px;
  border-radius: 10px;
  border: 1px solid color-mix(in srgb, var(--accent) 35%, var(--stroke));
  background: color-mix(in srgb, var(--accent) 24%, transparent);
  color: var(--text);
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  transition: background var(--motion-fast) var(--motion-ease), border-color var(--motion-fast) var(--motion-ease), transform var(--motion-fast) var(--motion-ease);
  align-self: flex-end;
  white-space: nowrap;
}

.message-send-btn:hover:not(:disabled) {
  background: color-mix(in srgb, var(--accent) 38%, transparent);
  border-color: color-mix(in srgb, var(--accent) 55%, var(--stroke));
  transform: translateY(-1px);
}

.message-send-btn:disabled {
  opacity: 0.45;
  cursor: not-allowed;
  transform: none;
}

/* ==========================================================================
   Typing Indicator
   ========================================================================== */

.typing-indicator {
  padding: 0 16px;
  height: 24px;
  display: flex;
  align-items: center;
  gap: 6px;
  flex-shrink: 0;
}

.typing-indicator-active {
  color: var(--text-muted);
  font-size: 12px;
}

.typing-dots {
  display: inline-flex;
  gap: 3px;
}

.typing-dots span {
  width: 6px;
  height: 6px;
  background: var(--text-muted);
  border-radius: 50%;
  animation: typingBounce 1.2s infinite;
}

.typing-dots span:nth-child(2) {
  animation-delay: 0.15s;
}

.typing-dots span:nth-child(3) {
  animation-delay: 0.3s;
}

/* ==========================================================================
   Direct Message Intro
   ========================================================================== */

.dm-intro {
  display: flex;
  align-items: center;
  gap: 14px;
  padding: 16px 20px 12px;
  color: var(--text);
  border-bottom: 1px solid rgba(255, 255, 255, 0.04);
  background: linear-gradient(90deg, rgba(212, 175, 55, 0.08), transparent 60%);
}

.dm-intro > :last-child {
  min-width: 0;
}

.dm-intro-icon {
  width: 44px;
  height: 44px;
  border-radius: 14px;
  display: grid;
  place-items: center;
  background: rgba(212, 175, 55, 0.15);
  color: var(--text);
  font-weight: 700;
  font-size: 18px;
}

.dm-intro-title {
  font-size: 16px;
  font-weight: 600;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dm-intro-subtitle {
  font-size: 12px;
  color: var(--text-muted);
  margin-top: 4px;
  overflow-wrap: anywhere;
}

.dm-intro-chips {
  display: flex;
  gap: 8px;
  margin-top: 8px;
}

.dm-intro-chip {
  padding: 4px 8px;
  border-radius: 999px;
  font-size: 10px;
  color: var(--text-faint);
  background: rgba(255, 255, 255, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.08);
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

@keyframes typingBounce {
  0%, 60%, 100% { transform: translateY(0); opacity: 0.4; }
  30% { transform: translateY(-4px); opacity: 1; }
}

.typing-text {
  white-space: nowrap;
}

/* ==========================================================================
   Home Page
   ========================================================================== */

.home-page {
  display: block;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  overflow-x: hidden;
  padding: 24px;
}

.home-content {
  width: min(1200px, 100%);
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  text-align: center;
}

.home-content-v2 {
  width: min(1200px, 100%);
  align-items: stretch;
  text-align: left;
  gap: 22px;
}

.home-mascot {
  border-radius: var(--radius-xl);
  opacity: 0.85;
}

.home-title {
  font-size: 24px;
  font-weight: 700;
}

.home-subtitle {
  font-size: 14px;
  color: var(--text-muted);
  max-width: 300px;
}

.home-content-v2 .home-subtitle {
  max-width: 640px;
}

.home-anchor-target {
  position: relative;
  top: -12px;
  height: 0;
}

.home-dashboard-tiles {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 12px;
}

.home-dashboard-tile {
  display: grid;
  gap: 6px;
  align-content: start;
  min-height: 134px;
  padding: 14px;
  text-align: left;
  text-decoration: none;
  color: inherit;
  border-radius: 16px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background:
    radial-gradient(circle at 90% 8%, rgba(138, 123, 255, 0.07), transparent 40%),
    radial-gradient(circle at 14% 14%, rgba(121, 223, 255, 0.06), transparent 35%),
    rgba(10, 16, 28, 0.48);
  cursor: pointer;
  transition: border-color 0.16s ease, transform 0.16s ease, background 0.16s ease;
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.03);
}

button.home-dashboard-tile {
  font: inherit;
}

.home-dashboard-tile:hover {
  transform: translateY(-2px);
  border-color: rgba(121, 223, 255, 0.2);
}

:root[data-theme-v2='true'] .home-dashboard-tile:focus-visible {
  outline: 2px solid rgba(121, 223, 255, 0.3);
  outline-offset: 2px;
}

.home-dashboard-tile-eyebrow {
  font-size: 10px;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--text-faint);
  font-weight: 700;
}

.home-dashboard-tile-meta {
  font-size: 11px;
  color: var(--text-muted);
  line-height: 1.2;
}

.home-dashboard-tile-title {
  font-size: 15px;
  font-weight: 700;
  color: var(--text);
}

.home-dashboard-tile-desc {
  font-size: 12px;
  line-height: 1.35;
  color: var(--text-muted);
}

.home-status-strip {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 10px;
}

.home-status-chip {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 10px;
  padding: 10px 12px;
  border-radius: 14px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background:
    linear-gradient(180deg, rgba(255,255,255,0.025), rgba(255,255,255,0.008)),
    color-mix(in srgb, var(--bg-elevated) 84%, transparent);
}

.home-status-chip-label {
  font-size: 11px;
  color: var(--text-faint);
  font-weight: 600;
}

.home-status-chip strong {
  font-size: 14px;
  color: var(--text);
}

.discover-page,
.shop-page,
.notifications-page {
  flex: 1;
  min-height: 0;
  overflow: auto;
  padding: 20px;
  display: grid;
  align-content: start;
  gap: 14px;
}

.discover-header,
.shop-hero,
.notifications-header {
  display: grid;
  gap: 8px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 18px;
  padding: 16px;
  background:
    radial-gradient(circle at 88% 8%, rgba(138, 123, 255, 0.08), transparent 38%),
    radial-gradient(circle at 15% 10%, rgba(121, 223, 255, 0.07), transparent 32%),
    rgba(10, 16, 28, 0.58);
}

.discover-eyebrow,
.shop-eyebrow,
.notifications-eyebrow {
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--text-faint);
}

.discover-title,
.shop-title,
.notifications-title {
  margin: 0;
  font-size: 22px;
  line-height: 1.15;
}

.discover-subtitle,
.shop-subtitle,
.notifications-subtitle {
  margin: 0;
  color: var(--text-muted);
  font-size: 13px;
  max-width: 70ch;
}

/* Shop cosmetics tab bar */
.shop-tabs {
  display: flex;
  gap: 4px;
  flex-wrap: wrap;
}

.shop-tab {
  padding: 8px 18px;
  border-radius: 8px;
  background: transparent;
  border: none;
  color: var(--text-muted, #8e9ab8);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: background 0.15s, color 0.15s;
}

.shop-tab:hover {
  background: var(--surface-raised, rgba(255, 255, 255, 0.06));
  color: var(--text, #e4e9f5);
}

.shop-tab-active {
  background: var(--surface-raised, rgba(255, 255, 255, 0.08));
  color: var(--text, #e4e9f5);
  font-weight: 600;
}

.shop-section-desc {
  color: var(--text-muted, #8e9ab8);
  font-size: 13px;
  margin: 0 0 16px;
}

.shop-error {
  margin: 0 0 4px;
}

.discover-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.discover-tab {
  border: 1px solid var(--stroke);
  background: rgba(255, 255, 255, 0.03);
  color: var(--text-muted);
  border-radius: 999px;
  padding: 7px 11px;
  font-size: 12px;
  font-weight: 600;
}

.discover-tab.active {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.22);
  background: rgba(121, 223, 255, 0.08);
}

.discover-panel,
.notifications-panel {
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 18px;
  padding: 14px;
  background: rgba(10, 16, 28, 0.45);
}

:root[data-theme-v2='true'] .notifications-panel {
  background:
    linear-gradient(180deg, rgba(121, 223, 255, 0.03), transparent 36%),
    linear-gradient(320deg, rgba(138, 123, 255, 0.028), transparent 38%),
    rgba(10, 16, 28, 0.46);
  box-shadow: 0 10px 22px rgba(0,0,0,0.12);
}

.discover-controls {
  display: grid;
  gap: 10px;
  margin-bottom: 12px;
}

.discover-controls-row {
  display: grid;
  grid-template-columns: minmax(0, 1fr) auto;
  gap: 10px;
  align-items: center;
}

.discover-sort {
  display: grid;
  grid-template-columns: auto auto;
  align-items: center;
  gap: 8px;
  padding: 6px 10px;
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(8, 12, 22, 0.34);
  color: var(--text-muted);
  font-size: 11px;
  font-weight: 600;
}

.discover-sort select {
  border: 0;
  background: transparent;
  color: var(--text);
  font: inherit;
  outline: none;
}

.discover-search {
  height: 38px;
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(8, 12, 22, 0.44);
  color: var(--text);
  padding: 0 12px;
  font-size: 13px;
}

.discover-tag-row {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.discover-inline-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.notifications-filter-row {
  align-items: center;
}

.discover-inline-pill {
  border-radius: 999px;
  border: 1px solid rgba(255,255,255,0.07);
  background: rgba(255,255,255,0.02);
  color: var(--text-faint);
  padding: 4px 8px;
  font-size: 11px;
}

.discover-inline-pill-strong {
  color: var(--text);
  border-color: color-mix(in srgb, var(--stroke-strong) 84%, transparent);
  background: color-mix(in srgb, var(--bg-elevated) 82%, transparent);
}

.discover-reset-btn {
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(255,255,255,0.02);
  color: var(--text);
  border-radius: 999px;
  padding: 5px 10px;
  font-size: 11px;
  font-weight: 600;
  cursor: pointer;
}

.discover-reset-btn:hover {
  background: rgba(255,255,255,0.04);
}

.discover-tag {
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(8, 12, 22, 0.34);
  color: var(--text-muted);
  border-radius: 999px;
  padding: 5px 9px;
  font-size: 11px;
  font-weight: 600;
  cursor: pointer;
}

.discover-tag.active {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.24);
  background: rgba(121, 223, 255, 0.08);
}

.discover-card-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 12px;
}

.discover-card {
  display: grid;
  grid-template-columns: 42px 1fr;
  grid-template-areas:
    "icon body"
    "cta cta";
  gap: 10px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(10, 16, 28, 0.45);
  border-radius: 16px;
  padding: 12px;
  box-shadow: inset 0 1px 0 rgba(255,255,255,0.025);
}

.discover-card-icon {
  grid-area: icon;
  width: 42px;
  height: 42px;
  border-radius: 12px;
  display: grid;
  place-items: center;
  font-weight: 700;
  color: var(--text);
  border: 1px solid rgba(121, 223, 255, 0.18);
  background: linear-gradient(135deg, rgba(121,223,255,0.12), rgba(138,123,255,0.1));
}

.discover-card-body {
  grid-area: body;
  display: grid;
  gap: 6px;
}

.discover-card-body h3 {
  margin: 0;
  font-size: 14px;
}

.discover-card-body p {
  margin: 0;
  color: var(--text-muted);
  font-size: 12px;
  line-height: 1.35;
}

.discover-card-status {
  font-size: 11px;
  color: var(--text-faint);
}

.discover-card-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.discover-card-tag {
  border-radius: 999px;
  border: 1px solid rgba(255,255,255,0.08);
  background: rgba(255,255,255,0.02);
  color: var(--text-faint);
  font-size: 10px;
  padding: 3px 7px;
}

.discover-card-cta {
  grid-area: cta;
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(255,255,255,0.03);
  color: var(--text-muted);
  padding: 8px 10px;
  font-size: 12px;
  font-weight: 600;
}

.discover-empty-inline {
  border-radius: 14px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  padding: 12px;
  color: var(--text-muted);
  font-size: 13px;
  display: grid;
  gap: 4px;
}

.discover-empty-inline strong {
  color: var(--text);
  font-size: 13px;
}

.discover-empty-inline span {
  font-size: 12px;
  color: var(--text-muted);
}

.discover-empty-actions {
  margin-top: 6px;
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.settings-note {
  margin-top: 8px;
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: color-mix(in srgb, var(--bg-elevated) 72%, transparent);
  color: var(--text-muted);
  padding: 10px 12px;
  font-size: 12px;
  line-height: 1.4;
}


.shop-link {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  align-self: start;
  border-radius: 999px;
  border: 1px solid rgba(121, 223, 255, 0.24);
  background: rgba(121, 223, 255, 0.08);
  color: var(--text);
  text-decoration: none;
  padding: 6px 10px;
  font-size: 12px;
  font-weight: 600;
}

.shop-pill {
  display: inline-flex;
  align-items: center;
  border-radius: 999px;
  border: 1px solid var(--stroke);
  padding: 4px 8px;
  color: var(--text-faint);
  font-size: 11px;
}

.notifications-list {
  display: grid;
  gap: 10px;
}

.notifications-section-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  margin-bottom: 10px;
}

.notifications-section-title {
  font-size: 13px;
  font-weight: 700;
  color: var(--text);
}

.notifications-section-meta {
  font-size: 11px;
  color: var(--text-faint);
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 999px;
  padding: 4px 8px;
  background: rgba(255,255,255,0.02);
  white-space: nowrap;
}

.notifications-feedback {
  font-size: 12px;
  color: var(--text-muted);
}

.notifications-inline-actions {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 8px;
}

.notifications-inline-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 6px 8px;
}

.notifications-filter-count {
  display: inline-flex;
  margin-left: 4px;
  color: var(--text-faint);
}

.notifications-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
  border: 1px solid color-mix(in srgb, var(--stroke) 86%, transparent);
  border-radius: 14px;
  padding: 10px 12px;
  background: rgba(8, 12, 22, 0.4);
}

.notifications-item > :first-child {
  min-width: 0;
}

.notifications-request-actions {
  display: flex;
  align-items: center;
  gap: 8px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.notifications-request-btn {
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(255,255,255,0.03);
  color: var(--text);
  border-radius: 10px;
  padding: 6px 10px;
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
  min-height: 30px;
}

.notifications-request-btn.accept {
  border-color: rgba(121, 223, 255, 0.24);
  background: rgba(121, 223, 255, 0.08);
}

.notifications-request-btn:disabled {
  opacity: 0.6;
  cursor: default;
}

.notifications-item-title {
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
  overflow-wrap: anywhere;
}

.notifications-item-link {
  text-decoration: none;
}

.notifications-item-link:hover {
  color: var(--accent);
}

.notifications-item-meta {
  font-size: 11px;
  color: var(--text-faint);
  overflow-wrap: anywhere;
  line-height: 1.35;
}

.notifications-badge {
  min-width: 26px;
  height: 26px;
  border-radius: 999px;
  display: grid;
  place-items: center;
  padding: 0 8px;
  background: rgba(121, 223, 255, 0.14);
  border: 1px solid rgba(121, 223, 255, 0.28);
  color: var(--text);
  font-size: 12px;
  font-weight: 700;
}

.notifications-badge-group {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.notifications-badge-mention {
  background: rgba(255, 189, 89, 0.14);
  border-color: rgba(255, 189, 89, 0.28);
}

.guild-rail-unread-badge {
  position: absolute;
  top: -4px;
  right: -4px;
  min-width: 18px;
  height: 18px;
  border-radius: 999px;
  padding: 0 5px;
  display: grid;
  place-items: center;
  background: color-mix(in srgb, var(--accent) 18%, rgba(9, 14, 24, 0.95));
  border: 1px solid color-mix(in srgb, var(--accent) 40%, transparent);
  color: var(--text);
  font-size: 10px;
  font-weight: 700;
  line-height: 1;
  pointer-events: none;
  z-index: 2;
}

/* Voice activity badge on guild icons */
.guild-rail-voice-badge {
  position: absolute;
  bottom: -2px;
  right: -2px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: grid;
  place-items: center;
  background: rgba(46, 204, 113, 0.2);
  border: 2px solid rgba(46, 204, 113, 0.6);
  color: #2ecc71;
  pointer-events: none;
  z-index: 2;
  animation: guild-voice-pulse 2s ease-in-out infinite;
}

@keyframes guild-voice-pulse {
  0%, 100% { box-shadow: 0 0 0 0 rgba(46, 204, 113, 0.3); }
  50% { box-shadow: 0 0 0 3px rgba(46, 204, 113, 0); }
}

/* Voice tooltip on guild hover — rendered via portal with position:fixed */
.guild-rail-voice-tooltip {
  min-width: 160px;
  max-width: 220px;
  background: var(--bg-secondary, #1a1f2e);
  border: 1px solid var(--border, rgba(255, 255, 255, 0.08));
  border-radius: 8px;
  padding: 8px 10px;
  z-index: 9999;
  pointer-events: none;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
}

.guild-rail-voice-tooltip-title {
  font-size: 11px;
  font-weight: 700;
  color: #2ecc71;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  margin-bottom: 6px;
}

.guild-rail-voice-tooltip-channel {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 3px 0;
  font-size: 12px;
  color: var(--text-secondary, rgba(255, 255, 255, 0.65));
}

.guild-rail-voice-tooltip-icon {
  font-size: 11px;
  flex-shrink: 0;
}

.guild-rail-voice-tooltip-name {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: var(--text, rgba(255, 255, 255, 0.9));
}

.guild-rail-voice-tooltip-count {
  flex-shrink: 0;
  font-size: 11px;
  font-weight: 600;
  color: #2ecc71;
  background: rgba(46, 204, 113, 0.12);
  border-radius: 8px;
  padding: 1px 6px;
}

.notifications-empty {
  display: grid;
  gap: 10px;
  justify-items: start;
  color: var(--text-muted);
  font-size: 13px;
}

/* ==========================================================================
   Guild Page (loading / empty)
   ========================================================================== */

.guild-page-loading,
.guild-page-empty {
  display: grid;
  place-items: center;
  flex: 1;
  color: var(--text-muted);
  font-size: 14px;
}

/* ==========================================================================
   Invite Page
   ========================================================================== */

.invite-page {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 24px;
  background:
    radial-gradient(circle at 30% 40%, rgba(212, 175, 55, 0.06), transparent 40%),
    radial-gradient(circle at 70% 60%, rgba(155, 255, 223, 0.05), transparent 35%),
    var(--bg);
}

.invite-card {
  width: 100%;
  max-width: 440px;
  background: rgba(17, 26, 43, 0.85);
  backdrop-filter: blur(24px);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-xl);
  padding: 40px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
  text-align: center;
}

.invite-inviter {
  font-size: 14px;
  color: var(--text-muted);
}

.invite-guild-icon {
  margin: 8px 0;
}

.invite-guild-name {
  font-size: 22px;
  font-weight: 700;
}

.invite-description {
  font-size: 13px;
  color: var(--text-muted);
}

.invite-stats {
  display: flex;
  gap: 16px;
}

.invite-member-count {
  font-size: 13px;
  color: var(--text-faint);
}

.invite-error {
  font-size: 13px;
  color: var(--danger);
}

.invite-accept-btn {
  width: 100%;
  margin-top: 8px;
}

.invite-auth-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  margin-top: 8px;
}

.invite-auth-prompt p {
  font-size: 13px;
  color: var(--text-muted);
}

/* ==========================================================================
   Error Boundary
   ========================================================================== */

.error-boundary {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 24px;
  background: var(--bg);
}

.error-boundary-content {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16px;
}

.error-boundary-message {
  font-size: 14px;
  color: var(--text-muted);
  max-width: 400px;
}

/* ==========================================================================
   Scrollbar styling
   ========================================================================== */

::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: var(--stroke);
  border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
  background: rgba(212, 175, 55, 0.35);
}

/* ==========================================================================
   Selection Highlight
   ========================================================================== */

::selection {
  background: rgba(212, 175, 55, 0.3);
  color: var(--text, #e8e4e0);
}

::-moz-selection {
  background: rgba(212, 175, 55, 0.3);
  color: var(--text, #e8e4e0);
}

/* ==========================================================================
   Modal
   ========================================================================== */

.modal-overlay {
  position: fixed;
  inset: 0;
  z-index: 1000;
  display: grid;
  place-items: center;
  background: rgba(0, 0, 0, 0.55);
  backdrop-filter: blur(12px) saturate(120%);
  -webkit-backdrop-filter: blur(12px) saturate(120%);
  animation: modalOverlayIn 0.15s ease;
}

@keyframes modalOverlayIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-content {
  background: linear-gradient(165deg, rgba(18, 24, 39, 0.96), rgba(14, 20, 33, 0.96));
  border: 1px solid var(--stroke);
  border-radius: var(--radius-xl);
  box-shadow: 0 16px 48px rgba(0, 0, 0, 0.4);
  max-height: 90vh;
  overflow-y: auto;
  animation: modalContentIn 0.2s ease;
}

.modal-sm { width: 360px; }
.modal-md { width: 440px; }
.modal-lg { width: 560px; }

@keyframes modalContentIn {
  from { opacity: 0; transform: translateY(12px) scale(0.97); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 24px 0;
}

.modal-title {
  font-size: 18px;
  font-weight: 700;
}

.modal-close {
  background: none;
  border: none;
  color: var(--text-muted);
  font-size: 20px;
  width: 32px;
  height: 32px;
  display: grid;
  place-items: center;
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: all 0.1s ease;
}

.modal-close:hover {
  background: rgba(255, 255, 255, 0.06);
  color: var(--text);
}

.modal-close:focus-visible {
  outline: 2px solid color-mix(in srgb, var(--accent) 55%, transparent);
}

.modal-body {
  padding: 20px 24px 24px;
}

.modal-footer {
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  padding: 0 24px 20px;
  flex-wrap: wrap;
}

/* Modal form elements */
.modal-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
  min-width: 0;
}

/* ── Create Guild Wizard Steps ── */

.create-guild-step-indicator {
  display: flex;
  gap: 4px;
  margin-bottom: 8px;
}

.create-guild-step-dot {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 10px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: transparent;
  color: var(--text-faint);
  font-size: 12px;
  cursor: pointer;
  transition: all 0.15s ease;
}

.create-guild-step-dot:hover {
  background: rgba(255, 255, 255, 0.03);
}

.create-guild-step-dot.active {
  border-color: color-mix(in srgb, var(--accent) 55%, transparent);
  color: var(--text);
  background: color-mix(in srgb, var(--accent) 8%, transparent);
}

.create-guild-step-dot.done {
  color: var(--text-muted);
  border-color: color-mix(in srgb, var(--accent) 25%, transparent);
}

.create-guild-step-num {
  display: grid;
  place-items: center;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  background: color-mix(in srgb, var(--accent) 15%, transparent);
  font-size: 11px;
  font-weight: 700;
  flex-shrink: 0;
}

.create-guild-step-dot.active .create-guild-step-num {
  background: var(--accent);
  color: #fff;
}

.create-guild-step-dot.done .create-guild-step-num {
  background: color-mix(in srgb, var(--accent) 30%, transparent);
}

.create-guild-step-label {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.create-guild-step-content {
  display: grid;
  gap: 12px;
}

.create-guild-step-heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
}

.create-guild-step-count {
  font-size: 12px;
  font-weight: 500;
  color: var(--text-muted);
}

/* ── Categories Grid ── */

.create-guild-category-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 6px;
}

.create-guild-category-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  padding: 10px 6px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: transparent;
  color: var(--text-muted);
  font-size: 11px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.15s ease;
  text-align: center;
}

.create-guild-category-card:hover {
  border-color: var(--stroke-strong);
  background: rgba(255, 255, 255, 0.03);
}

.create-guild-category-card.selected {
  border-color: color-mix(in srgb, var(--accent) 55%, transparent);
  background: color-mix(in srgb, var(--accent) 10%, transparent);
  color: var(--text);
  box-shadow: 0 0 0 1px color-mix(in srgb, var(--accent) 20%, transparent) inset;
}

.create-guild-category-icon {
  font-size: 20px;
  line-height: 1;
}

.create-guild-category-label {
  line-height: 1.2;
}

/* ── Tags Picker ── */

.create-guild-tag-picker {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
}

.create-guild-tag-pill {
  padding: 5px 12px;
  border-radius: 999px;
  border: 1px solid var(--stroke);
  background: transparent;
  color: var(--text-muted);
  font-size: 12px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.15s ease;
  white-space: nowrap;
}

.create-guild-tag-pill:hover {
  border-color: var(--stroke-strong);
  color: var(--text);
}

.create-guild-tag-pill.selected {
  border-color: color-mix(in srgb, var(--accent) 55%, transparent);
  background: color-mix(in srgb, var(--accent) 12%, transparent);
  color: var(--text);
}

.create-guild-tag-input {
  width: 100%;
  padding: 8px 12px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: var(--bg-input, rgba(9, 14, 24, 0.72));
  color: var(--text);
  font-size: 13px;
  outline: none;
  transition: border-color 0.15s ease;
}

.create-guild-tag-input:focus {
  border-color: color-mix(in srgb, var(--accent) 55%, transparent);
}

.create-guild-tag-input::placeholder {
  color: var(--text-faint);
}

/* ── Template Grid (existing) ── */

.create-guild-template-group {
  display: grid;
  gap: 8px;
}

.create-guild-template-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
  gap: 8px;
}

.create-guild-template-card {
  display: grid;
  gap: 5px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: rgba(9, 14, 24, 0.72);
  color: var(--text);
  padding: 10px 11px;
  cursor: pointer;
  text-align: left;
  transition: border-color 0.15s ease, background 0.15s ease, box-shadow 0.15s ease;
}

.create-guild-template-card:hover {
  border-color: var(--stroke-strong);
  background: rgba(13, 19, 31, 0.9);
}

.create-guild-template-card:focus-visible {
  outline: 2px solid color-mix(in srgb, var(--accent) 45%, transparent);
}

.create-guild-template-card-active {
  border-color: color-mix(in srgb, var(--accent) 55%, transparent);
  background: rgba(21, 35, 55, 0.9);
  box-shadow: 0 0 0 1px color-mix(in srgb, var(--accent) 24%, transparent) inset;
}

.create-guild-template-icon {
  font-size: 22px;
  line-height: 1;
}

.create-guild-template-title {
  font-size: 13px;
  font-weight: 700;
}

.create-guild-template-description {
  font-size: 12px;
  color: var(--text-muted);
  line-height: 1.35;
}

.create-guild-template-hint {
  font-size: 11px;
  color: var(--text-faint);
}

.channel-topic-input,
.profile-bio-input {
  resize: vertical;
  min-height: 72px;
}

.channel-private-toggle {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 13px;
  color: var(--text);
}

.channel-private-toggle input {
  width: 14px;
  height: 14px;
}

.channel-private-note {
  margin: 0;
  font-size: 12px;
  color: var(--text-muted);
}

.profile-modal-header {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 8px 0 4px;
}

.profile-modal-header-text {
  display: flex;
  flex-direction: column;
}

.profile-modal-name {
  font-size: 16px;
  font-weight: 700;
  color: var(--text);
}

.profile-modal-subtitle {
  font-size: 12px;
  color: var(--text-muted);
}

.profile-avatar-note {
  font-size: 12px;
  color: var(--text-faint);
  background: rgba(255, 255, 255, 0.04);
  border: 1px dashed var(--stroke);
  padding: 10px 12px;
  border-radius: var(--radius-md);
}

.profile-media-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 12px;
}

.profile-media-card {
  display: flex;
  flex-direction: column;
  gap: 10px;
  padding: 12px;
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: rgba(12, 18, 30, 0.7);
}

.profile-media-preview {
  display: flex;
  align-items: center;
  gap: 12px;
}

.profile-media-title {
  font-size: 13px;
  font-weight: 600;
  color: var(--text);
}

.profile-media-subtitle {
  font-size: 11px;
  color: var(--text-faint);
}

.profile-media-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.profile-banner-preview {
  width: 100%;
  height: 100px;
  border-radius: var(--radius-md);
  border: 1px solid rgba(255, 255, 255, 0.08);
  background: rgba(0, 0, 0, 0.25);
  background-size: cover;
  background-position: center;
  display: grid;
  place-items: center;
  color: var(--text-faint);
  font-size: 12px;
}

.profile-banner-placeholder {
  opacity: 0.8;
}

.file-input {
  display: none;
}

.modal-error {
  padding: 10px 14px;
  background: var(--danger-bg);
  border: 1px solid rgba(255, 107, 107, 0.25);
  border-radius: var(--radius-md);
  color: var(--danger);
  font-size: 13px;
}

.bug-report-textarea {
  resize: vertical;
  min-height: 76px;
  font-family: inherit;
  width: 100%;
  padding: 10px 12px;
  box-sizing: border-box;
}

.bug-report-textarea-sm {
  min-height: 56px;
}

.bug-report-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
}

.bug-report-grid-item {
  display: grid;
  gap: 6px;
}

.bug-report-context {
  border-radius: var(--radius-md);
  border: 1px solid var(--stroke);
  background: rgba(8, 12, 20, 0.55);
  padding: 10px 12px;
}

.bug-report-context-title {
  font-size: 12px;
  font-weight: 600;
  color: var(--text);
  margin-bottom: 8px;
}

.bug-report-context-pre {
  margin: 0;
  white-space: pre-wrap;
  word-break: break-word;
  font-size: 11px;
  line-height: 1.45;
  color: var(--text-muted);
  font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', monospace;
  max-height: 140px;
  overflow: auto;
}

.bug-report-status {
  border-radius: var(--radius-md);
  border: 1px solid rgba(212, 175, 55, 0.22);
  background: rgba(212, 175, 55, 0.08);
  color: var(--text);
  padding: 10px 12px;
  font-size: 12px;
}

.bug-report-status-error {
  border-color: rgba(255, 107, 107, 0.22);
  background: rgba(255, 107, 107, 0.08);
  color: #ffd3d3;
}

@media (max-width: 640px) {
  .modal-md,
  .modal-lg {
    width: min(96vw, 560px);
  }

  .bug-report-grid {
    grid-template-columns: 1fr;
  }
}

/* ==========================================================================
   User Bar (bottom of channel sidebar)
   ========================================================================== */

.user-bar {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8px 10px;
  border-top: 1px solid var(--stroke);
  background: rgba(8, 12, 20, 0.6);
  flex-shrink: 0;
}

.user-bar-compact {
  width: 48px;
  min-width: 48px;
  height: 48px;
  padding: 0;
  border-top: 0;
  background: transparent;
  justify-content: center;
  overflow: visible;
}

.user-bar-compact-trigger {
  width: 48px;
  height: 48px;
  display: grid;
  place-items: center;
  background: none;
  border: none;
  border-radius: 50%;
  cursor: pointer;
}

.user-bar-compact-trigger:hover {
  background: rgba(255, 255, 255, 0.06);
}

.user-bar-menu.user-bar-menu-compact {
  position: fixed;
  left: 0;
  right: auto;
  top: 0;
  bottom: auto;
  width: 240px;
  min-width: 240px;
  z-index: 2000;
  background: #080c14;
  background-image: none;
  border-color: rgba(166, 186, 230, 0.16);
  box-shadow:
    0 22px 42px rgba(0, 0, 0, 0.62),
    0 0 0 1px rgba(255,255,255,0.025) inset;
  backdrop-filter: none;
}

.user-bar-info {
  display: flex;
  align-items: center;
  gap: 8px;
  min-width: 0;
  flex: 1;
}

.user-bar-names {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.user-bar-displayname {
  font-size: 13px;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

.user-bar-username {
  font-size: 11px;
  color: var(--text-faint);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.2;
}

.user-bar-balance {
  font-size: 11px;
  color: var(--text-faint);
  display: flex;
  align-items: center;
  white-space: nowrap;
  margin-top: 2px;
  font-weight: 500;
}

.user-bar-balance:hover {
  color: var(--text-muted);
}

.user-bar-settings {
  background: none;
  border: none;
  color: var(--text-muted);
  cursor: pointer;
  padding: 4px;
  border-radius: 4px;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* ========== Earn Section (Gratonites) ========== */
.earn-balance-display {
  display: flex;
  align-items: baseline;
  gap: 8px;
  margin-top: 8px;
}

.earn-balance-amount {
  font-size: 32px;
  font-weight: 700;
  color: #fbbf24;
}

.earn-balance-label {
  font-size: 14px;
  color: var(--text-muted);
}

.earn-streak-display {
  display: flex;
  gap: 24px;
  margin-top: 16px;
  padding: 16px;
  background: var(--surface-1);
  border-radius: 8px;
}

.earn-streak-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.earn-streak-number {
  font-size: 24px;
  font-weight: 700;
  color: var(--accent);
}

.earn-streak-label {
  font-size: 12px;
  color: var(--text-muted);
}

.earn-streak-bonuses {
  margin-top: 16px;
}

.earn-streak-bonuses h4 {
  font-size: 14px;
  font-weight: 600;
  margin-bottom: 8px;
  color: var(--text-primary);
}

.earn-streak-bonuses ul {
  list-style: none;
  padding: 0;
  margin: 0;
}

.earn-streak-bonuses li {
  display: flex;
  justify-content: space-between;
  padding: 8px 0;
  border-bottom: 1px solid var(--border);
  color: var(--text-muted);
}

.earn-streak-bonuses li:last-child {
  border-bottom: none;
}

.earn-completed {
  color: #22c55e !important;
}

.earn-check {
  color: #22c55e;
  font-weight: 700;
}

.earn-milestones {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-top: 16px;
}

.earn-milestone {
  padding: 12px;
  background: var(--surface-1);
  border-radius: 8px;
  border: 2px solid transparent;
}

.earn-milestone.earn-completed {
  border-color: #22c55e;
  background: rgba(34, 197, 94, 0.1);
}

.earn-milestone-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.earn-reward {
  color: #fbbf24;
  font-weight: 600;
}

.earn-progress-bar {
  height: 4px;
  background: var(--surface-2);
  border-radius: 2px;
  overflow: hidden;
}

.earn-progress-fill {
  height: 100%;
  background: var(--accent);
  border-radius: 2px;
  transition: width 0.3s ease;
}

.earn-current-count {
  margin-top: 16px;
  text-align: center;
  font-size: 14px;
  color: var(--text-muted);
}

.user-bar-settings:hover {
  background: rgba(255, 255, 255, 0.06);
  color: var(--text);
}

.user-bar-actions {
  display: flex;
  align-items: center;
  gap: 4px;
}

/* User bar popup menu */
.user-bar-menu {
  position: absolute;
  bottom: calc(100% + 4px);
  left: 8px;
  right: 8px;
  z-index: 100;
  background: rgb(9, 13, 22);
  border: 1px solid color-mix(in srgb, var(--stroke) 90%, rgba(255,255,255,0.08));
  border-radius: var(--radius-md);
  padding: 6px;
  box-shadow:
    0 18px 36px rgba(0, 0, 0, 0.56),
    0 0 0 1px rgba(255,255,255,0.02) inset;
  backdrop-filter: none;
}

.user-bar-menu-item {
  display: block;
  width: 100%;
  padding: 8px 10px;
  background: none;
  border: none;
  border-radius: var(--radius-sm);
  color: var(--text-muted);
  font-size: 13px;
  font-family: inherit;
  text-align: left;
  cursor: pointer;
  transition: all 0.1s ease;
}

.user-bar-menu-item:hover {
  background: rgba(212, 175, 55, 0.08);
  color: var(--text);
}

.user-bar-menu-group-label {
  font-size: 11px;
  color: var(--text-faint);
  text-transform: uppercase;
  letter-spacing: 0.06em;
  margin: 4px 8px 6px;
}

.user-bar-presence-grid {
  display: grid;
  gap: 4px;
  margin-bottom: 4px;
}

.user-bar-presence-item {
  display: flex;
  align-items: center;
  gap: 8px;
}

.user-bar-presence-item.is-active {
  background: rgba(212, 175, 55, 0.1);
  color: var(--text);
}

.user-bar-menu-divider {
  height: 1px;
  background: var(--stroke);
  margin: 4px 6px;
}

/* ==========================================================================
   Context Menu
   ========================================================================== */

.context-menu {
  position: fixed;
  z-index: 200;
  min-width: 180px;
  background: var(--bg-float);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  padding: 6px;
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.4);
  animation: contextMenuIn 0.11s ease-out;
}

@keyframes contextMenuIn {
  from { opacity: 0; transform: scale(0.98) translateY(3px); }
  to { opacity: 1; transform: scale(1) translateY(0); }
}

.context-menu-item {
  display: flex;
  align-items: center;
  gap: 8px;
  width: 100%;
  padding: 8px 10px;
  background: none;
  border: none;
  border-radius: var(--radius-sm);
  color: var(--text-muted);
  font-size: 13px;
  font-family: inherit;
  cursor: pointer;
  text-align: left;
  transition: all 0.1s ease;
}

.context-menu-item:hover {
  background: rgba(212, 175, 55, 0.08);
  color: var(--text);
}

.context-menu-item:focus-visible {
  outline: 2px solid color-mix(in srgb, var(--accent) 45%, transparent);
  color: var(--text);
}

.context-menu-item-danger {
  color: var(--danger);
}

.context-menu-item-danger:hover {
  background: var(--danger-bg);
  color: var(--danger);
}

/* ==========================================================================
   Profile Popover
   ========================================================================== */

.profile-popover {
  position: fixed;
  z-index: 210;
  width: 280px;
  background: var(--bg-float);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  overflow: hidden;
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.45);
}

.profile-popover-effect {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0.42;
  pointer-events: none;
  z-index: 0;
}

.profile-popover-banner {
  height: 84px;
  background: linear-gradient(120deg, rgba(212, 175, 55, 0.2), rgba(255, 145, 86, 0.12));
  background-size: cover;
  background-position: center;
}

.profile-popover-body {
  padding: 14px 16px 16px;
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: -26px;
  position: relative;
  z-index: 1;
}

.profile-popover-avatar {
  border: 2px solid rgba(10, 14, 22, 0.9);
}

.profile-popover-names {
  display: flex;
  flex-direction: column;
}

.profile-popover-name {
  font-size: 15px;
  font-weight: 700;
  color: var(--text);
}

.profile-popover-username {
  font-size: 12px;
  color: var(--text-faint);
}

.profile-popover-bio {
  font-size: 12px;
  color: var(--text-muted);
