.poll-header h3 { margin: 0; font-size: 18px; }
.poll-status { font-size: 12px; padding: 2px 8px; border-radius: 4px; text-transform: uppercase; font-weight: 600; }
.poll-status.active { background: var(--success-text); color: var(--bg); }
.poll-status.closed { background: var(--text-muted); color: var(--bg); }
.poll-options { display: flex; flex-direction: column; gap: 8px; margin-bottom: 16px; }
.poll-option { position: relative; display: flex; justify-content: space-between; align-items: center; padding: 12px 16px; background: var(--bg); border: 1px solid var(--stroke); border-radius: var(--radius-md); cursor: pointer; overflow: hidden; }
.poll-option:disabled { cursor: default; }
.poll-option-bar { position: absolute; left: 0; top: 0; bottom: 0; background: var(--accent); opacity: 0.2; transition: width 0.3s; }
.poll-option-text { position: relative; z-index: 1; }
.poll-option-percent { position: relative; z-index: 1; font-weight: 600; }
.poll-footer { display: flex; gap: 16px; font-size: 13px; color: var(--text-muted); }
.poll-multi { background: var(--accent); color: var(--bg); padding: 2px 6px; border-radius: 4px; font-size: 11px; }

/* ========== Q&A Page ========== */
.qa-page { padding: 24px; background: var(--bg); height: 100%; display: flex; flex-direction: column; }
.qa-page-v2 { background: var(--semantic-surface-base, #2c2c3e); }
.qa-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
.qa-header h1 { font-size: 28px; margin: 0; }
.qa-ask-btn { padding: 10px 20px; background: var(--accent); color: var(--bg); border: none; border-radius: var(--radius-md); cursor: pointer; font-weight: 600; }
.qa-controls { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
.qa-filters { display: flex; gap: 8px; }
.qa-filter-btn { padding: 8px 16px; background: transparent; border: 1px solid var(--stroke); color: var(--text-secondary); border-radius: var(--radius-md); cursor: pointer; }
.qa-filter-btn.active { background: var(--accent); color: var(--bg); border-color: var(--accent); }
.qa-sort select { padding: 8px 12px; background: var(--bg-soft); border: 1px solid var(--stroke); border-radius: var(--radius-md); color: var(--text); }
.qa-list { flex: 1; overflow-y: auto; display: flex; flex-direction: column; gap: 12px; }
.qa-card { display: flex; gap: 16px; padding: 16px; background: var(--bg-soft); border-radius: var(--radius-lg); cursor: pointer; }
.qa-card:hover { background: var(--bg-elevated); }
.qa-votes { display: flex; flex-direction: column; align-items: center; gap: 4px; }
.qa-votes button { background: none; border: none; color: var(--text-muted); cursor: pointer; padding: 4px; }
.qa-votes button:hover { color: var(--accent); }
.qa-vote-count { font-weight: 700; font-size: 18px; }
.qa-content { flex: 1; }
.qa-content h3 { margin: 0 0 8px 0; font-size: 16px; }
.qa-preview { color: var(--text-secondary); font-size: 14px; margin: 0 0 12px 0; }
.qa-meta { display: flex; gap: 12px; font-size: 12px; color: var(--text-muted); }
.qa-resolved { color: var(--success-text); }
.qa-detail-modal { position: fixed; inset: 0; background: rgba(0,0,0,0.7); display: flex; align-items: center; justify-content: center; z-index: 1000; }
.qa-detail { background: var(--bg-soft); border-radius: var(--radius-lg); padding: 24px; max-width: 700px; width: 90%; max-height: 80vh; overflow-y: auto; position: relative; }
.qa-close { position: absolute; top: 16px; right: 16px; background: none; border: none; font-size: 24px; color: var(--text-muted); cursor: pointer; }
.qa-detail-header h2 { margin: 0 0 8px 0; }
.qa-detail-body { padding: 16px 0; border-top: 1px solid var(--stroke); border-bottom: 1px solid var(--stroke); }
.qa-answers-section h3 { margin: 16px 0; }
.qa-answer { display: flex; gap: 12px; padding: 16px; background: var(--bg); border-radius: var(--radius-md); margin-bottom: 12px; }
.qa-answer.accepted { border: 2px solid var(--success-text); }
.qa-answer-content { flex: 1; }
.qa-answer-content p { margin: 0 0 8px 0; }
.qa-accepted-badge { color: var(--success-text); font-size: 18px; }
.qa-accept-btn { padding: 6px 12px; background: var(--success-text); color: var(--bg); border: none; border-radius: var(--radius-md); cursor: pointer; }

/* ========== Scheduled Messages Page ========== */
.scheduled-msgs-page { padding: 24px; background: var(--bg); }
.scheduled-msgs-page-v2 { background: var(--semantic-surface-base, #2c2c3e); }
.scheduled-msgs-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
.scheduled-msgs-header h1 { font-size: 28px; margin: 0; }
.scheduled-msgs-create-btn { padding: 10px 20px; background: var(--accent); color: var(--bg); border: none; border-radius: var(--radius-md); cursor: pointer; font-weight: 600; }
.scheduled-msgs-filters { display: flex; gap: 8px; margin-bottom: 24px; }
.scheduled-msgs-filter-btn { padding: 8px 16px; background: transparent; border: 1px solid var(--stroke); color: var(--text-secondary); border-radius: var(--radius-md); cursor: pointer; }
.scheduled-msgs-filter-btn.active { background: var(--accent); color: var(--bg); border-color: var(--accent); }
.scheduled-msgs-list { display: flex; flex-direction: column; gap: 12px; }
.scheduled-msg-card { display: flex; align-items: center; gap: 16px; padding: 16px; background: var(--bg-soft); border-radius: var(--radius-lg); }
.scheduled-msg-channel-name { font-weight: 600; }
.scheduled-msg-content { flex: 1; }
.scheduled-msg-content p { margin: 0; color: var(--text-secondary); }
.scheduled-msg-actions { display: flex; gap: 8px; }
.scheduled-msg-cancel-btn, .scheduled-msg-delete-btn { padding: 6px 12px; border-radius: var(--radius-md); cursor: pointer; font-size: 13px; }
.scheduled-msg-cancel-btn { background: var(--danger-text); color: white; border: none; }
.scheduled-msg-delete-btn { background: transparent; border: 1px solid var(--stroke); color: var(--text-secondary); }

/* ========== AutoMod Page ========== */
.automod-page { padding: 24px; background: var(--bg); }
.automod-page-v2 { background: var(--semantic-surface-base, #2c2c3e); }
.automod-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
.automod-header h1 { font-size: 28px; margin: 0; }
.automod-subtitle { color: var(--text-muted); margin: 4px 0 0 0; }
.automod-create-btn { padding: 10px 20px; background: var(--accent); color: var(--bg); border: none; border-radius: var(--radius-md); cursor: pointer; font-weight: 600; }
.automod-rules { display: flex; flex-direction: column; gap: 16px; margin-bottom: 24px; }
.automod-rule-card { padding: 20px; background: var(--bg-soft); border-radius: var(--radius-lg); }
.automod-rule-card.disabled { opacity: 0.6; }
.automod-rule-header { display: flex; align-items: center; gap: 16px; margin-bottom: 12px; }
.automod-rule-info { flex: 1; }
.automod-rule-info h3 { margin: 0 0 4px 0; font-size: 16px; }
.automod-rule-trigger { font-size: 12px; color: var(--text-muted); }
.automod-rule-actions { display: flex; gap: 8px; }
.automod-edit-btn, .automod-delete-btn { padding: 6px 12px; background: var(--bg); border: 1px solid var(--stroke); color: var(--text-secondary); border-radius: var(--radius-md); cursor: pointer; font-size: 13px; }
.automod-rule-details { display: flex; flex-wrap: wrap; gap: 16px; font-size: 13px; }
.automod-label { color: var(--text-muted); margin-right: 4px; }
.automod-info-box { padding: 20px; background: var(--bg-soft); border-radius: var(--radius-lg); }
.automod-info-box h4 { margin: 0 0 12px 0; }
.automod-info-box ul { margin: 0; padding-left: 20px; }
.automod-info-box li { margin-bottom: 8px; color: var(--text-secondary); }
.toggle-switch { position: relative; display: inline-block; width: 44px; height: 24px; }
.toggle-switch input { opacity: 0; width: 0; height: 0; }
.toggle-slider { position: absolute; cursor: pointer; inset: 0; background: var(--bg); border: 2px solid var(--stroke); border-radius: 24px; transition: 0.3s; }
.toggle-slider:before { content: ""; position: absolute; height: 18px; width: 18px; left: 1px; bottom: 1px; background: var(--text-muted); border-radius: 50%; transition: 0.3s; }
.toggle-switch input:checked + .toggle-slider { background: var(--accent); border-color: var(--accent); }
.toggle-switch input:checked + .toggle-slider:before { transform: translateX(20px); background: var(--bg); }

/* ========== Status Picker ========== */
.status-picker { position: absolute; top: 100%; left: 0; width: 280px; background: var(--bg-elevated); border: 1px solid var(--stroke); border-radius: var(--radius-lg); box-shadow: 0 8px 24px rgba(0,0,0,0.3); z-index: 100; overflow: hidden; }
.status-picker-header { padding: 12px 16px; border-bottom: 1px solid var(--stroke); font-size: 12px; font-weight: 700; text-transform: uppercase; color: var(--text-muted); }
.status-picker-options { padding: 8px; }
.status-picker-option { display: flex; align-items: center; gap: 12px; width: 100%; padding: 10px 12px; background: none; border: none; border-radius: var(--radius-md); cursor: pointer; color: var(--text); text-align: left; }
.status-picker-option:hover { background: var(--bg-soft); }
.status-picker-option.active { background: var(--accent); color: var(--bg); }
.status-indicator { font-size: 20px; }
.status-label { flex: 1; }
.status-check { color: var(--accent); }
.status-picker-footer { padding: 8px; border-top: 1px solid var(--stroke); }
.status-custom-btn { display: flex; align-items: center; gap: 8px; width: 100%; padding: 10px 12px; background: none; border: none; border-radius: var(--radius-md); cursor: pointer; color: var(--text); }
.status-custom-btn:hover { background: var(--bg-soft); }
.status-button { width: 32px; height: 32px; border-radius: 50%; background: var(--bg-elevated); border: 3px solid var(--bg); cursor: pointer; display: flex; align-items: center; justify-content: center; }
.status-button-indicator { width: 14px; height: 14px; border-radius: 50%; }

/* ========== Toast ========== */
.toast-container { position: fixed; bottom: 24px; right: 24px; display: flex; flex-direction: column; gap: 8px; z-index: 9999; }
.toast { display: flex; align-items: center; gap: 12px; padding: 14px 16px; background: var(--bg-elevated); border-radius: var(--radius-lg); box-shadow: 0 4px 16px rgba(0,0,0,0.3); min-width: 280px; animation: toast-in 0.3s ease; }
@keyframes toast-in { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
.toast-success { border-left: 4px solid var(--success-text); }
.toast-error { border-left: 4px solid var(--danger-text); }
.toast-warning { border-left: 4px solid var(--accent); }
.toast-info { border-left: 4px solid var(--accent-gold); }
.toast-icon { font-size: 18px; }
.toast-success .toast-icon { color: var(--success-text); }
.toast-error .toast-icon { color: var(--danger-text); }
.toast-warning .toast-icon { color: var(--accent); }
.toast-info .toast-icon { color: var(--accent-gold); }
.toast-message { flex: 1; font-size: 14px; }
.toast-close { background: none; border: none; color: var(--text-muted); cursor: pointer; font-size: 18px; padding: 0; }

/* ========== Skeleton ========== */
.skeleton { background: linear-gradient(90deg, var(--bg-soft) 25%, var(--bg-elevated) 50%, var(--bg-soft) 75%); background-size: 200% 100%; animation: skeleton-pulse 1.5s ease-in-out infinite; }
@keyframes skeleton-pulse { 0% { background-position: 200% 0; } 100% { background-position: -200% 0; } }
.skeleton-text { display: flex; flex-direction: column; gap: 8px; }
.skeleton-card { padding: 16px; background: var(--bg-soft); border-radius: var(--radius-lg); }
.skeleton-card-header { display: flex; gap: 12px; margin-bottom: 16px; }
.skeleton-card-header-text { display: flex; flex-direction: column; gap: 8px; justify-content: center; }
.skeleton-list { display: flex; flex-direction: column; gap: 12px; }
.skeleton-list-item { display: flex; gap: 12px; align-items: center; }
.skeleton-list-item-content { flex: 1; display: flex; flex-direction: column; gap: 6px; }
.skeleton-table { display: flex; flex-direction: column; gap: 8px; }
.skeleton-table-header { display: grid; grid-template-columns: repeat(4, 1fr); gap: 12px; padding-bottom: 8px; border-bottom: 1px solid var(--stroke); }
.skeleton-table-row { display: grid; grid-template-columns: repeat(4, 1fr); gap: 12px; }
