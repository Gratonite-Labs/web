  gap: 8px;
}

.mfa-backup-code {
  display: inline-flex;
  justify-content: center;
  padding: 8px 10px;
  border-radius: 10px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(8, 12, 22, 0.42);
