.invite-link-copy {
  padding: 10px 16px;
  background: var(--gradient-primary);
  border: 1px solid rgba(212, 175, 55, 0.3);
  border-radius: var(--radius-md);
  color: var(--text);
  font-family: inherit;
  font-size: 13px;
  font-weight: 600;
  cursor: pointer;
  white-space: nowrap;
  transition: all 0.15s ease;
}

.invite-link-copy:hover {
  border-color: rgba(212, 175, 55, 0.5);
  box-shadow: 0 4px 20px rgba(212, 175, 55, 0.15);
}

.invite-link-copy.copied {
  background: rgba(155, 255, 223, 0.15);
  border-color: rgba(155, 255, 223, 0.4);
  color: var(--accent-3);
}

.invite-link-hint {
  font-size: 12px;
  color: var(--text-faint);
  margin-top: 8px;
}

/* ==========================================================================
   Member List Panel
   ========================================================================== */

.member-list {
  display: flex;
  flex-direction: column;
  background: rgba(11, 17, 28, 0.95);
  border-left: 1px solid var(--stroke);
  overflow: hidden;
}

.member-list-header {
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-faint);
  padding: 16px 16px 8px;
  flex-shrink: 0;
}

.member-list-items {
  flex: 1;
  overflow-y: auto;
  padding: 0 8px 8px;
  scrollbar-width: thin;
  scrollbar-color: var(--stroke) transparent;
}

.member-list-item {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 6px 8px;
  border-radius: var(--radius-sm);
  transition: background 0.1s ease;
  cursor: pointer;
}

.member-list-item:hover {
  background: rgba(212, 175, 55, 0.04);
}

.member-list-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.member-list-name {
  font-size: 13px;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.member-list-username {
  font-size: 11px;
  color: var(--text-faint);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.member-list-presence {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 10px;
  color: var(--text-faint);
  margin-top: 2px;
}

.member-list-loading {
  display: grid;
  place-items: center;
  flex: 1;
  padding: 40px;
}

/* ==========================================================================
   DM Info Panel
   ========================================================================== */

.app-layout.dm-info-panel-open {
  grid-template-columns: var(--guild-rail-width) var(--channel-sidebar-width) 1fr 340px;
}

.app-layout.sidebar-collapsed.dm-info-panel-open {
  grid-template-columns: var(--guild-rail-width) 0 1fr 340px;
}

/* ==========================================================================
   DM Profile Panel
   ========================================================================== */

.dm-profile-panel {
  width: 340px;
  background: rgba(11, 17, 28, 0.95);
  border-left: 1px solid var(--stroke);
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.dm-profile-banner {
  height: 120px;
  background: linear-gradient(135deg, var(--gratonite-purple, #5a4a7a) 0%, var(--gratonite-gold, #d4af37) 50%, var(--gratonite-gold-bright, #e8c547) 100%);
  flex-shrink: 0;
}

.dm-profile-identity {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
  padding: 0 16px 16px;
  margin-top: -40px;
  border-bottom: 1px solid var(--stroke);
}

.dm-profile-avatar-wrap {
  border-radius: 50%;
  border: 4px solid rgba(11, 17, 28, 0.95);
  background: rgba(11, 17, 28, 0.95);
  line-height: 0;
}

.dm-profile-display-name {
  font-size: 20px;
  font-weight: 600;
  margin: 8px 0 0;
  color: var(--text);
}

.dm-profile-username {
  font-size: 14px;
  color: var(--text-muted);
}

.dm-profile-section {
  padding: 12px 16px 0;
}

.dm-profile-section-title {
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  color: var(--text-faint);
  margin: 0 0 4px;
}

.dm-profile-section-value {
  font-size: 14px;
  color: var(--text);
  margin: 0;
}

.dm-profile-status-row {
  display: flex;
  align-items: center;
  gap: 8px;
}

.dm-profile-status-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  flex-shrink: 0;
}

.dm-profile-status-online {
  background: #23a55a;
}

.dm-profile-status-idle {
  background: #f0b232;
}

.dm-profile-status-dnd {
  background: #f23f43;
}

.dm-profile-status-offline,
.dm-profile-status-invisible {
  background: #80848e;
}

.dm-profile-status-text {
  font-size: 14px;
  color: var(--text);
}

.dm-profile-collapsible-header {
  display: flex;
  align-items: center;
  gap: 6px;
  width: 100%;
  background: none;
  border: none;
  padding: 0;
  cursor: pointer;
  font-size: 12px;
  font-weight: 700;
  text-transform: uppercase;
  color: var(--text-faint);
  letter-spacing: 0.02em;
}

.dm-profile-collapsible-header:hover {
  color: var(--text);
}

.dm-profile-chevron {
  display: inline-block;
  font-size: 12px;
  transition: transform 0.15s ease;
}

.dm-profile-chevron.expanded {
  transform: rotate(90deg);
}

.dm-profile-collapsible-body {
  padding-top: 8px;
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.dm-profile-empty {
  font-size: 13px;
  color: var(--text-muted);
  margin: 0;
}

.dm-profile-mutual-server-row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 8px;
  border-radius: 6px;
}

.dm-profile-mutual-server-row:hover {
  background: rgba(255, 255, 255, 0.04);
}

.dm-profile-mutual-server-name {
  font-size: 14px;
  color: var(--text);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dm-profile-mutual-server-nick {
  font-size: 12px;
  color: var(--text-muted);
  flex-shrink: 0;
}

.dm-profile-mutual-friend-row {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 6px 8px;
  border-radius: 6px;
}

.dm-profile-mutual-friend-row:hover {
  background: rgba(255, 255, 255, 0.04);
}

.dm-profile-mutual-friend-name {
  font-size: 14px;
  color: var(--text);
}

.dm-profile-mutual-friend-username {
  font-size: 12px;
  color: var(--text-muted);
}

.dm-profile-view-full-btn {
  margin: auto 16px 16px;
  padding: 10px;
  background: rgba(255, 255, 255, 0.06);
  border: none;
  border-radius: 6px;
  color: var(--text);
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  transition: background 0.15s ease;
}

.dm-profile-view-full-btn:hover {
  background: rgba(255, 255, 255, 0.1);
}

/* ==========================================================================
   Message Action Bar
   ========================================================================== */

.message-action-bar {
  position: absolute;
  top: 6px;
  right: 12px;
  z-index: 10;
  display: flex;
  gap: 2px;
  background: var(--bg-float);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  padding: 2px;
}

.message-action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 28px;
  height: 28px;
  background: none;
  border: none;
  color: var(--text-muted);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: background 0.15s, color 0.15s;
}

.message-action-btn:hover {
  background: rgba(212, 175, 55, 0.08);
  color: var(--text);
}

.message-action-btn-active {
  color: var(--text);
  background: rgba(255, 255, 255, 0.08);
}

.message-action-btn-danger:hover {
  background: rgba(255, 107, 107, 0.12);
  color: var(--danger);
}

/* ==========================================================================
   Reaction Bar
   ========================================================================== */

.reaction-bar {
  display: flex;
  flex-wrap: wrap;
  gap: 4px;
  margin-top: 4px;
}

.reaction-pill {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  padding: 2px 8px;
  background: rgba(212, 175, 55, 0.06);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-pill);
  cursor: pointer;
  transition: background 0.15s, border-color 0.15s;
  font-size: 13px;
  color: var(--text-muted);
}

.reaction-pill:hover {
  background: rgba(212, 175, 55, 0.12);
  border-color: var(--stroke-strong);
}

.reaction-pill-active {
  background: rgba(212, 175, 55, 0.15);
  border-color: rgba(212, 175, 55, 0.4);
  color: var(--text);
}

.reaction-emoji {
  font-size: 16px;
  line-height: 1;
}

.reaction-count {
  font-size: 12px;
  font-weight: 600;
  min-width: 10px;
  text-align: center;
}

.reaction-pill-add {
  color: var(--text-faint);
  padding: 2px 6px;
}

.reaction-pill-add:hover {
  color: var(--text);
}

/* ==========================================================================
   Emoji Picker
   ========================================================================== */

.emoji-picker {
  position: absolute;
  bottom: 100%;
  right: 0;
  z-index: 50;
  width: 320px;
  max-height: 360px;
  background: var(--bg-float);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.emoji-picker-header {
  padding: 10px 10px 6px;
  display: flex;
  align-items: center;
  gap: 8px;
  flex-shrink: 0;
}

.emoji-picker-search {
  width: 100%;
  padding: 8px 10px;
  background: var(--bg-input);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  color: var(--text);
  font-family: inherit;
  font-size: 13px;
  outline: none;
  transition: border-color 0.15s ease;
}

.emoji-picker-search:focus {
  border-color: var(--accent);
}

.emoji-picker-search::placeholder {
  color: var(--text-faint);
}

.emoji-picker-add {
  flex-shrink: 0;
  border: 1px solid rgba(212, 175, 55, 0.35);
  background: rgba(212, 175, 55, 0.12);
  color: var(--text);
  border-radius: var(--radius-md);
  padding: 8px 10px;
  font-size: 12px;
  line-height: 1;
}

.emoji-picker-add:hover {
  background: rgba(212, 175, 55, 0.2);
}

.emoji-picker-grid {
  flex: 1;
  overflow-y: auto;
  padding: 4px 10px 10px;
  scrollbar-width: thin;
  scrollbar-color: var(--stroke) transparent;
}

.emoji-picker-category {
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-faint);
  padding: 8px 0 4px;
}

.emoji-picker-items {
  display: grid;
  grid-template-columns: repeat(8, 1fr);
  gap: 2px;
}

.emoji-picker-item {
  display: grid;
  place-items: center;
  width: 34px;
  height: 34px;
  background: none;
  border: none;
  border-radius: var(--radius-sm);
  font-size: 20px;
  cursor: pointer;
  transition: background 0.1s;
}

.emoji-picker-item:hover {
  background: rgba(212, 175, 55, 0.1);
}

.message-composer-controls .emoji-picker {
  position: absolute;
  bottom: 100%;
  right: 0;
  margin-bottom: 8px;
  z-index: 50;
}

/* ==========================================================================
   Server Settings + Emoji Studio
   ========================================================================== */

.server-settings-title {
  font-size: 18px;
  color: var(--text);
}

.server-settings-muted {
  font-size: 13px;
  color: var(--text-muted);
}

.server-settings-feedback {
  font-size: 12px;
  color: var(--text-muted);
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.02);
  padding: 6px 8px;
  line-height: 1.35;
}

.server-settings-inline-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.server-settings-stat-pill {
  font-size: 11px;
  color: var(--text-muted);
  border: 1px solid var(--stroke);
  background: rgba(255, 255, 255, 0.03);
  border-radius: 999px;
  padding: 4px 8px;
}

.server-settings-header-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 12px;
}

.server-settings-actions {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

.channel-permission-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
}

.channel-permission-card {
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(10, 16, 28, 0.66);
  padding: 10px;
  display: grid;
  gap: 8px;
}

.channel-permission-title {
  font-size: 12px;
  color: var(--text-muted);
}

.channel-permission-row {
  display: grid;
  grid-template-columns: 1fr auto;
  gap: 8px;
  min-width: 0;
}

.channel-permission-list {
  display: grid;
  gap: 8px;
}

.channel-permission-item {
  border: 1px solid var(--stroke);
  border-radius: var(--radius-sm);
  background: rgba(6, 10, 20, 0.55);
  padding: 8px 10px;
  display: flex;
  align-items: center;
  gap: 8px;
  min-width: 0;
  flex-wrap: wrap;
}

.channel-permission-item > * {
  min-width: 0;
}

.channel-permission-item.server-member-admin-item {
  gap: 10px;
}

.channel-permission-target {
  font-size: 13px;
  color: var(--text);
  flex: 1;
  min-width: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.channel-permission-badge {
  font-size: 11px;
  border-radius: 999px;
  padding: 3px 7px;
  border: 1px solid var(--stroke);
}

.channel-permission-badge.is-allow {
  color: #9be8b6;
  border-color: rgba(155, 232, 182, 0.45);
  background: rgba(155, 232, 182, 0.14);
}

.channel-permission-badge.is-deny {
  color: #ffb0b0;
  border-color: rgba(255, 125, 125, 0.45);
  background: rgba(255, 125, 125, 0.12);
}

.channel-permission-remove {
  border: 1px solid var(--stroke);
  background: rgba(255, 255, 255, 0.04);
  color: var(--text);
  border-radius: 8px;
  padding: 4px 8px;
  font-size: 12px;
  flex-shrink: 0;
}

.channel-permission-item .channel-permission-remove {
  margin-left: auto;
}

.emoji-slot-summary {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 10px;
}

.emoji-slot-card {
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(10, 16, 28, 0.66);
  padding: 10px 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.emoji-slot-label {
  color: var(--text-muted);
  font-size: 12px;
}

.emoji-slot-value {
  color: var(--text);
  font-size: 13px;
  font-weight: 700;
}

.emoji-admin-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
  gap: 10px;
}

.emoji-admin-item {
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(10, 16, 28, 0.62);
  padding: 10px;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.emoji-admin-preview {
  width: 40px;
  height: 40px;
  object-fit: contain;
}

.emoji-admin-meta {
  display: flex;
  align-items: center;
  gap: 6px;
}

.emoji-admin-name {
  font-size: 12px;
  color: var(--text);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.emoji-admin-badge {
  font-size: 10px;
  color: var(--accent);
  border: 1px solid rgba(212, 175, 55, 0.35);
  border-radius: 999px;
  padding: 2px 6px;
}

.emoji-admin-delete {
  border: 1px solid rgba(255, 107, 107, 0.35);
  background: rgba(255, 107, 107, 0.12);
  color: var(--danger);
  border-radius: 8px;
  font-size: 12px;
  padding: 6px 8px;
}

.emoji-studio {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.emoji-studio-grid {
  display: grid;
  gap: 14px;
  grid-template-columns: 1.15fr 1fr;
}

.emoji-studio-editor,
.emoji-studio-form {
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(10, 16, 28, 0.66);
  padding: 12px;
}

.emoji-studio-preview-wrap {
  min-height: 220px;
  border: 1px dashed var(--stroke);
  border-radius: var(--radius-md);
  background: rgba(6, 10, 20, 0.72);
  display: grid;
  place-items: center;
  overflow: hidden;
}

.emoji-studio-preview {
  width: 128px;
  height: 128px;
  object-fit: contain;
  transition: transform 120ms ease;
}

.emoji-studio-placeholder {
  color: var(--text-faint);
  font-size: 13px;
}

.emoji-studio-controls {
  margin-top: 10px;
  display: grid;
  gap: 8px;
}

.emoji-studio-control {
  display: grid;
  gap: 4px;
  font-size: 12px;
  color: var(--text-muted);
}

.emoji-studio-control input[type='range'] {
  width: 100%;
}

.emoji-studio-form {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.emoji-studio-upload {
  align-self: flex-start;
}

.emoji-studio-note {
  font-size: 12px;
  color: var(--text-faint);
}

.emoji-studio-meta {
  display: flex;
  flex-direction: column;
  gap: 4px;
  font-size: 12px;
  color: var(--text-muted);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-sm);
  padding: 8px;
  background: rgba(6, 10, 20, 0.55);
}


/* ========== Settings Shell ========== */
.settings-shell-overlay {
  position: fixed;
  inset: 0;
  z-index: 500;
  background: rgba(4, 8, 18, 0.75);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: settings-shell-in 0.2s ease;
}

@keyframes settings-shell-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

.settings-shell {
  display: flex;
  width: 100%;
  max-width: 900px;
  height: 85vh;
  max-height: 800px;
  border-radius: var(--radius-lg, 16px);
  overflow: hidden;
  background: var(--bg, #0a0f1a);
  border: 1px solid var(--stroke);
  animation: settings-shell-scale 0.2s ease;
}

@keyframes settings-shell-scale {
  from { transform: scale(0.96); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.settings-shell-sidebar {
  width: 220px;
  flex-shrink: 0;
  background: var(--bg-elevated, #111a2b);
  padding: 20px 8px;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  border-right: 1px solid var(--stroke);
}

.settings-shell-group-label {
  font-family: var(--font-display, 'Space Grotesk', sans-serif);
  font-size: 11px;
  font-weight: 600;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--text-faint, #6a7d94);
  padding: 4px 12px;
  margin-bottom: 4px;
  margin-top: 8px;
}

.settings-shell-nav-item {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 8px 12px;
  border-radius: var(--radius-md, 10px);
  font-size: 14px;
  font-weight: 500;
  color: var(--text-muted, #9fb1c7);
  background: transparent;
  border: none;
  cursor: pointer;
  transition: background 0.15s, color 0.15s;
  position: relative;
  text-align: left;
}

.settings-shell-nav-item:hover {
  background: rgba(124, 58, 237, 0.08);
  color: var(--text, #f1f6ff);
}

.settings-shell-nav-item.active {
  background: rgba(124, 58, 237, 0.12);
  color: var(--text, #f1f6ff);
  font-weight: 600;
}

.settings-shell-nav-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 4px;
  bottom: 4px;
  width: 3px;
  border-radius: 0 2px 2px 0;
  background: #7C3AED;
}

.settings-shell-nav-item.danger {
  color: var(--danger, #f87171);
}

.settings-shell-nav-item.danger:hover {
  background: rgba(248, 113, 113, 0.1);
  color: var(--danger, #f87171);
}

.settings-shell-divider {
  height: 1px;
  background: var(--stroke);
  margin: 8px 12px;
}

.settings-shell-content {
  flex: 1;
  overflow-y: auto;
  padding: 32px 40px;
  display: flex;
  flex-direction: column;
  gap: 24px;
  position: relative;
}

.settings-shell-close {
  position: absolute;
  top: 16px;
  right: 16px;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: var(--radius-md, 10px);
  background: transparent;
  border: none;
  cursor: pointer;
  color: var(--text-muted);
