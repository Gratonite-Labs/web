.bug-inbox-page {
  padding: 1.25rem;
  display: grid;
  gap: 1rem;
  height: 100%;
  min-height: 0;
  overflow-y: auto;
  overscroll-behavior: contain;
}

.bug-inbox-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 1rem;
  flex-wrap: wrap;
}

.bug-inbox-title {
  margin: 0;
  font-size: 1.35rem;
  font-weight: 700;
}

.bug-inbox-muted {
  margin: 0.35rem 0 0;
  color: var(--text-muted);
}

.bug-inbox-actions {
  display: flex;
  align-items: end;
  gap: 0.5rem;
  flex-wrap: wrap;
}

.bug-inbox-filter {
  display: grid;
  gap: 0.25rem;
  min-width: 9rem;
  color: var(--text-muted);
  font-size: 0.82rem;
}

.bug-inbox-error {
  border: 1px solid color-mix(in srgb, #ff6b6b 28%, transparent);
  background: color-mix(in srgb, #ff6b6b 8%, transparent);
  color: #ffd2d2;
  padding: 0.75rem 0.9rem;
  border-radius: 12px;
}

.bug-inbox-list {
  display: grid;
  gap: 0.9rem;
}

.bug-inbox-card {
  border: 1px solid var(--stroke);
  background: color-mix(in srgb, var(--surface-2) 92%, transparent);
  border-radius: 16px;
  padding: 0.95rem;
  display: grid;
  gap: 0.75rem;
}

.bug-inbox-card-head {
  display: flex;
  justify-content: space-between;
  gap: 0.75rem;
  align-items: flex-start;
}

.bug-inbox-card-title {
  font-weight: 700;
  line-height: 1.2;
}

.bug-inbox-card-meta {
  color: var(--text-muted);
  font-size: 0.82rem;
  margin-top: 0.3rem;
  word-break: break-word;
}

.bug-inbox-status {
  border-radius: 999px;
  padding: 0.2rem 0.65rem;
  font-size: 0.78rem;
  text-transform: capitalize;
  border: 1px solid var(--stroke);
  background: color-mix(in srgb, var(--surface-3) 85%, transparent);
}

.bug-inbox-status-open { color: #ffd58f; }
.bug-inbox-status-triaged { color: #9fd3ff; }
.bug-inbox-status-resolved { color: #9ff0b5; }
.bug-inbox-status-dismissed { color: #c8ccd6; }

.bug-inbox-summary {
  margin: 0;
  color: var(--text-primary);
  white-space: pre-wrap;
}

.bug-inbox-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 0.45rem 0.75rem;
  color: var(--text-muted);
  font-size: 0.82rem;
}

.bug-inbox-sections {
  display: grid;
  gap: 0.65rem;
}

.bug-inbox-section-label {
  color: var(--text-muted);
  font-size: 0.78rem;
  margin-bottom: 0.25rem;
}

.bug-inbox-pre {
  margin: 0;
  white-space: pre-wrap;
  word-break: break-word;
  border-radius: 10px;
  border: 1px solid var(--stroke);
  background: color-mix(in srgb, var(--surface-3) 86%, transparent);
  padding: 0.6rem;
  font-size: 0.82rem;
}

.bug-inbox-card-foot {
  display: flex;
  gap: 0.65rem;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.bug-inbox-link {
  color: var(--text-link);
  text-decoration: none;
}

.bug-inbox-link:hover {
  text-decoration: underline;
}

.bug-inbox-status-actions {
  display: flex;
  gap: 0.35rem;
  flex-wrap: wrap;
}

@media (max-width: 768px) {
  .bug-inbox-grid {
    grid-template-columns: 1fr;
  }
}

