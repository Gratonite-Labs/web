/* ==========================================================================
   Reset + Base
   ========================================================================== */

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body, #root {
  height: 100%;
}

body {
  font-family: var(--font-sans, 'Outfit', ui-sans-serif, system-ui, sans-serif);
  background: var(--bg);
  color: var(--text);
  line-height: 1.5;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

h1, h2, h3, h4, h5, h6 {
  font-family: var(--font-display, 'Space Grotesk', sans-serif);
}

a {
  color: var(--accent);
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

button {
  font-family: inherit;
  cursor: pointer;
}

/* ==========================================================================
   Loading Screen
   ========================================================================== */

.loading-screen {
  position: fixed;
  inset: 0;
  display: grid;
  place-items: center;
  background: var(--bg);
  z-index: 9999;
}

.loading-screen-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24px;
}

/* ==========================================================================
   Public Landing Page
   ========================================================================== */

.landing-page {
  min-height: 100%;
  position: relative;
  overflow: hidden;
  padding: 20px 20px 56px;
  background: radial-gradient(1000px 700px at 12% -8%, rgba(91, 123, 255, 0.12), transparent 60%),
    radial-gradient(900px 620px at 88% 0%, rgba(215, 92, 255, 0.1), transparent 58%),
    linear-gradient(180deg, #060917 0%, #090d19 38%, #080c18 100%);
}

.landing-grid {
  position: absolute;
  inset: 0;
  background-image:
    linear-gradient(rgba(122, 92, 255, 0.045) 1px, transparent 1px),
    linear-gradient(90deg, rgba(212, 175, 55, 0.035) 1px, transparent 1px);
  background-size: 44px 44px;
  mask-image: radial-gradient(circle at 50% 25%, black 40%, transparent 100%);
  opacity: 0.65;
  pointer-events: none;
}

.landing-glow {
  position: absolute;
  width: 420px;
  height: 420px;
  border-radius: 50%;
  filter: blur(64px);
  opacity: 0.2;
  pointer-events: none;
}

.landing-glow-a {
  top: 80px;
  left: -60px;
  background: rgba(212, 175, 55, 0.9);
}

.landing-glow-b {
  right: -90px;
  top: 120px;
  background: rgba(155, 92, 255, 0.9);
}

.landing-nav {
  position: relative;
  z-index: 1;
  max-width: 1200px;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  padding: 10px 14px;
  border: 1px solid rgba(122, 144, 201, 0.14);
  border-radius: 16px;
  background: linear-gradient(180deg, rgba(12, 17, 31, 0.78), rgba(10, 15, 28, 0.64));
  backdrop-filter: blur(16px) saturate(115%);
  box-shadow: 0 10px 28px rgba(0, 0, 0, 0.2);
}

.landing-brand {
  display: inline-flex;
  align-items: center;
  gap: 12px;
}

.landing-brand-logo {
  width: 48px;
  height: 48px;
  object-fit: contain;
  border-radius: 12px;
  box-shadow: 0 0 22px rgba(212, 175, 55, 0.12);
}

.landing-brand-text {
  display: flex;
  flex-direction: column;
  line-height: 1.05;
}

.landing-brand-name {
  font-weight: 700;
  letter-spacing: 0.02em;
  color: var(--text);
}

.landing-brand-sub {
  font-size: 0.72rem;
  color: var(--text-faint);
}

.landing-nav-actions {
  display: inline-flex;
  align-items: center;
  gap: 10px;
}

.landing-nav-link,
.landing-nav-cta {
  border-radius: 10px;
  padding: 9px 12px;
  font-weight: 600;
  font-size: 0.92rem;
  text-decoration: none;
}

.landing-nav-link {
  color: var(--text-muted);
  border: 1px solid transparent;
}

.landing-nav-link:hover {
  color: var(--text);
  text-decoration: none;
  background: rgba(255, 255, 255, 0.03);
  border-color: rgba(122, 144, 201, 0.14);
}

.landing-nav-cta {
  color: #071019;
  background: linear-gradient(135deg, #67dfff, #6b8dff 56%, #b26dff);
  box-shadow: 0 10px 24px rgba(212, 175, 55, 0.16);
}

.landing-nav-cta:hover {
  text-decoration: none;
  transform: translateY(-1px);
}

.landing-hero {
  position: relative;
  z-index: 1;
  max-width: 1200px;
  margin: 18px auto 0;
  display: grid;
  grid-template-columns: 1.05fr 0.95fr;
  gap: 24px;
  align-items: stretch;
}

.landing-hero-copy,
.landing-preview-shell {
  border: 1px solid rgba(122, 144, 201, 0.14);
  border-radius: 20px;
  background: linear-gradient(180deg, rgba(13, 19, 35, 0.72), rgba(10, 15, 28, 0.64));
  backdrop-filter: blur(20px) saturate(115%);
  box-shadow: 0 18px 48px rgba(0, 0, 0, 0.28);
}

.landing-hero-copy {
  padding: 28px 28px 24px;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.landing-kicker {
  color: #8eefff;
  font-size: 0.78rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.14em;
}

.landing-hero-copy h1 {
  font-size: clamp(2rem, 5vw, 3.25rem);
  line-height: 0.98;
  letter-spacing: -0.03em;
  max-width: 13ch;
  text-wrap: balance;
}

.landing-subtitle {
  color: var(--text-muted);
  max-width: 58ch;
  line-height: 1.65;
}

.landing-cta-row {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
  margin-top: 6px;
}

.landing-btn-primary,
.landing-btn-secondary {
  border-radius: 12px;
  padding: 12px 16px;
  font-weight: 700;
  text-decoration: none;
  transition: transform 140ms ease, border-color 140ms ease, background 140ms ease;
}

.landing-btn-primary {
  color: #071019;
  background: linear-gradient(135deg, #67dfff, #6790ff 52%, #b26dff);
  box-shadow: 0 12px 24px rgba(103, 144, 255, 0.18);
}

.landing-btn-primary:hover {
  text-decoration: none;
  transform: translateY(-1px);
}

.landing-btn-secondary {
  color: var(--text);
  border: 1px solid rgba(122, 144, 201, 0.2);
  background: rgba(255, 255, 255, 0.03);
}

.landing-btn-secondary:hover {
  text-decoration: none;
  background: rgba(255, 255, 255, 0.06);
  border-color: rgba(159, 177, 199, 0.32);
}

.landing-stat-row {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10px;
  margin-top: auto;
  padding-top: 8px;
}

.landing-stat {
  border-radius: 12px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.015));
  padding: 12px;
}

.landing-stat span {
  display: block;
  font-size: 0.72rem;
  color: var(--text-faint);
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.landing-stat strong {
  display: block;
  margin-top: 4px;
  font-size: 0.95rem;
}

.landing-preview-shell {
  overflow: hidden;
}

.landing-preview-topbar {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 14px;
  border-bottom: 1px solid rgba(122, 144, 201, 0.12);
  background: rgba(255, 255, 255, 0.02);
}

.landing-window-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  opacity: 0.95;
}

.landing-window-dot.red { background: #ff6b6b; }
.landing-window-dot.gold { background: #ffcf6a; }
.landing-window-dot.green { background: #79f0bb; }

.landing-preview-title {
  margin-left: 6px;
  color: var(--text-muted);
  font-size: 0.88rem;
}

.landing-preview-toolbar {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 12px 14px 6px;
  flex-wrap: wrap;
}

.landing-filter-pill,
.landing-preview-search {
  border-radius: 999px;
  padding: 6px 10px;
  font-size: 0.75rem;
  color: var(--text-muted);
  border: 1px solid rgba(122, 144, 201, 0.12);
  background: rgba(255, 255, 255, 0.02);
}

.landing-filter-pill.active {
  color: var(--text);
  border-color: rgba(212, 175, 55, 0.2);
  background: rgba(212, 175, 55, 0.06);
}

.landing-preview-search {
  margin-left: auto;
  min-width: 140px;
  text-align: left;
}

.landing-preview-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 12px;
  padding: 8px 14px 14px;
}

.landing-portal-card {
  border-radius: 14px;
  border: 1px solid rgba(122, 144, 201, 0.14);
  background: linear-gradient(180deg, rgba(255, 255, 255, 0.02), rgba(255, 255, 255, 0.015));
  overflow: hidden;
  transition: transform 180ms ease, border-color 180ms ease, box-shadow 180ms ease;
}

.landing-portal-card:hover {
  transform: translateY(-2px);
  border-color: rgba(159, 177, 199, 0.28);
  box-shadow: 0 12px 24px rgba(0, 0, 0, 0.22);
}

.landing-portal-banner {
  position: relative;
  height: 92px;
  padding: 10px;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  background:
    radial-gradient(180px 100px at 20% 20%, rgba(212, 175, 55, 0.22), transparent 70%),
    radial-gradient(160px 110px at 82% 20%, rgba(178, 109, 255, 0.2), transparent 70%),
    linear-gradient(150deg, rgba(103, 144, 255, 0.12), rgba(255, 255, 255, 0.01));
}

.landing-portal-chip {
  border-radius: 999px;
  padding: 5px 8px;
  font-size: 0.7rem;
  font-weight: 700;
  letter-spacing: 0.08em;
  color: var(--text);
  background: rgba(7, 10, 18, 0.44);
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.landing-portal-hover {
  align-self: flex-end;
  max-width: 60%;
  border-radius: 10px;
  padding: 5px 8px;
  font-size: 0.7rem;
  color: rgba(241, 246, 255, 0.84);
  background: rgba(7, 10, 18, 0.46);
  border: 1px solid rgba(122, 144, 201, 0.14);
  opacity: 0.88;
}

.landing-portal-meta {
  padding: 12px;
}

.landing-portal-meta h3 {
  font-size: 0.95rem;
}

.landing-portal-meta p {
  color: var(--text-muted);
  font-size: 0.82rem;
  margin-top: 2px;
}

.landing-preview-footer {
  border-top: 1px solid rgba(122, 144, 201, 0.1);
  padding: 10px 14px 14px;
}

.landing-preview-callout {
  border-radius: 10px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  background: rgba(255, 255, 255, 0.02);
  padding: 10px 12px;
  color: var(--text-muted);
  font-size: 0.82rem;
  line-height: 1.45;
}

.landing-section {
  position: relative;
  z-index: 1;
  max-width: 1200px;
  margin: 18px auto 0;
}

.landing-section-features,
.landing-section-roadmap,
.landing-section-cta {
  border: 1px solid rgba(122, 144, 201, 0.14);
  border-radius: 20px;
  background: linear-gradient(180deg, rgba(11, 16, 30, 0.68), rgba(9, 13, 24, 0.6));
  backdrop-filter: blur(16px) saturate(110%);
  box-shadow: 0 16px 42px rgba(0, 0, 0, 0.22);
}

.landing-section-features {
  padding: 22px;
}

.landing-section-header h2 {
  font-size: clamp(1.4rem, 3vw, 2.15rem);
  line-height: 1.05;
  letter-spacing: -0.02em;
  margin-top: 6px;
}

.landing-section-header p:last-child {
  margin-top: 10px;
  color: var(--text-muted);
  line-height: 1.65;
  max-width: 66ch;
}

.landing-feature-grid {
  margin-top: 18px;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 12px;
}

.landing-feature-card {
  position: relative;
  border-radius: 14px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  background: rgba(255, 255, 255, 0.02);
  padding: 14px 14px 14px 14px;
  transition: transform 160ms ease, border-color 160ms ease, background 160ms ease;
}

.landing-feature-card:hover {
  transform: translateY(-2px);
  border-color: rgba(122, 144, 201, 0.24);
  background: rgba(255, 255, 255, 0.03);
}

.landing-feature-line {
  width: 48px;
  height: 2px;
  border-radius: 999px;
  background: linear-gradient(90deg, #67dfff, #6b8dff, #b26dff);
  margin-bottom: 10px;
  opacity: 0.8;
}

.landing-feature-card h3 {
  font-size: 0.98rem;
  line-height: 1.2;
}

.landing-feature-card p {
  margin-top: 8px;
  color: var(--text-muted);
  font-size: 0.88rem;
  line-height: 1.55;
}

.landing-section-roadmap {
  padding: 20px;
}

.landing-roadmap-shell {
  display: grid;
  grid-template-columns: 1fr 1.05fr;
  gap: 16px;
}

.landing-roadmap-copy {
  border-radius: 14px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  background: rgba(255, 255, 255, 0.02);
  padding: 16px;
}

.landing-roadmap-copy h2 {
  margin-top: 6px;
  font-size: clamp(1.35rem, 2.8vw, 2rem);
  line-height: 1.05;
  letter-spacing: -0.02em;
}

.landing-roadmap-copy p {
  margin-top: 10px;
  color: var(--text-muted);
  line-height: 1.65;
}

.landing-checklist {
  list-style: none;
  margin-top: 14px;
  display: grid;
  gap: 8px;
}

.landing-checklist li {
  position: relative;
  padding: 9px 10px 9px 28px;
  border-radius: 10px;
  border: 1px solid rgba(122, 144, 201, 0.1);
  background: rgba(255, 255, 255, 0.015);
  font-size: 0.88rem;
  color: var(--text);
}

.landing-checklist li::before {
  content: '';
  position: absolute;
  left: 10px;
  top: 50%;
  width: 8px;
  height: 8px;
  border-radius: 50%;
  transform: translateY(-50%);
  background: linear-gradient(135deg, #67dfff, #b26dff);
  box-shadow: 0 0 12px rgba(103, 223, 255, 0.35);
}

.landing-roadmap-panel {
  border-radius: 14px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  background: rgba(255, 255, 255, 0.02);
  padding: 16px;
}

.landing-roadmap-panel-title {
  font-size: 0.86rem;
  color: var(--text-muted);
  text-transform: uppercase;
  letter-spacing: 0.12em;
  font-weight: 700;
}

.landing-roadmap-track {
  margin-top: 12px;
  display: grid;
  gap: 10px;
}

.landing-roadmap-step {
  display: grid;
  grid-template-columns: 44px 1fr;
  gap: 10px;
  border-radius: 12px;
  border: 1px solid rgba(122, 144, 201, 0.1);
  background: rgba(255, 255, 255, 0.015);
  padding: 10px;
}

.landing-roadmap-step.done {
  border-color: rgba(103, 223, 255, 0.16);
  background: rgba(103, 223, 255, 0.04);
}

.landing-roadmap-step.active {
  border-color: rgba(178, 109, 255, 0.2);
  background: linear-gradient(180deg, rgba(178, 109, 255, 0.06), rgba(103, 144, 255, 0.04));
  box-shadow: inset 0 0 0 1px rgba(178, 109, 255, 0.08);
}

.landing-roadmap-step .step-index {
  display: grid;
  place-items: center;
  width: 34px;
  height: 34px;
  border-radius: 10px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  color: var(--text-muted);
  font-size: 0.72rem;
  font-weight: 700;
}

.landing-roadmap-step strong {
  display: block;
  font-size: 0.92rem;
  line-height: 1.25;
}

.landing-roadmap-step p {
  margin-top: 4px;
  color: var(--text-muted);
  font-size: 0.82rem;
  line-height: 1.45;
}

.landing-section-cta {
  padding: 20px;
}

.landing-final-cta {
  display: grid;
  grid-template-columns: 1.1fr auto;
  gap: 20px;
  align-items: center;
  border-radius: 14px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  background:
    radial-gradient(420px 200px at 15% 10%, rgba(103, 223, 255, 0.08), transparent 75%),
    radial-gradient(380px 220px at 90% 20%, rgba(178, 109, 255, 0.08), transparent 75%),
    rgba(255, 255, 255, 0.02);
  padding: 18px;
}

.landing-final-cta h2 {
  margin-top: 6px;
  font-size: clamp(1.25rem, 2.8vw, 1.9rem);
  line-height: 1.08;
  letter-spacing: -0.02em;
}

.landing-final-cta p:last-child {
  margin-top: 10px;
  color: var(--text-muted);
  line-height: 1.65;
  max-width: 58ch;
}

.landing-final-actions {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.landing-section-footer {
  padding: 18px;
  border: 1px solid rgba(122, 144, 201, 0.12);
  border-radius: 18px;
  background: linear-gradient(180deg, rgba(10, 14, 26, 0.64), rgba(8, 12, 22, 0.56));
  backdrop-filter: blur(14px) saturate(110%);
  box-shadow: 0 12px 36px rgba(0, 0, 0, 0.18);
}

.landing-footer-shell {
  display: grid;
  grid-template-columns: 1.15fr 1fr;
  gap: 18px;
  align-items: start;
}

.landing-footer-brand {
  display: grid;
  grid-template-columns: 56px 1fr;
  gap: 12px;
  align-items: start;
  border: 1px solid rgba(122, 144, 201, 0.1);
  border-radius: 14px;
  background: rgba(255, 255, 255, 0.02);
  padding: 14px;
}

.landing-footer-logo {
  width: 80px;
  height: 80px;
  border-radius: 18px;
  object-fit: contain;
  box-shadow: 0 0 20px rgba(103, 144, 255, 0.12);
}

.landing-footer-brand h3 {
  font-size: 1rem;
  line-height: 1.1;
}

.landing-footer-brand p {
  margin-top: 8px;
  color: var(--text-muted);
  line-height: 1.6;
  font-size: 0.9rem;
  max-width: 52ch;
}

.landing-footer-links {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 10px;
}

.landing-footer-group {
  display: grid;
  align-content: start;
  gap: 8px;
  border-radius: 12px;
  border: 1px solid rgba(122, 144, 201, 0.1);
  background: rgba(255, 255, 255, 0.02);
  padding: 12px;
}

.landing-footer-title {
  color: var(--text-faint);
  font-size: 0.72rem;
  text-transform: uppercase;
  letter-spacing: 0.14em;
  font-weight: 700;
  margin-bottom: 2px;
}

.landing-footer-group a {
  color: var(--text-muted);
  text-decoration: none;
  font-size: 0.86rem;
  line-height: 1.35;
}

.landing-footer-group a:hover {
  color: var(--text);
  text-decoration: underline;
  text-decoration-color: rgba(103, 223, 255, 0.45);
}

/* ==========================================================================
   Public Blog / Guides
   ========================================================================== */

.blog-page {
  padding-bottom: 72px;
}

.blog-hero {
  padding-top: 8px;
}

.blog-title {
  margin: 0;
  font-size: clamp(2rem, 4vw, 2.8rem);
  line-height: 1.05;
  letter-spacing: -0.02em;
}

.blog-card-grid {
  margin-top: 20px;
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 14px;
}

.blog-guide-card {
  display: grid;
  gap: 10px;
  padding: 16px;
  border-radius: 16px;
  border: 1px solid rgba(132, 157, 255, 0.14);
  background:
    linear-gradient(180deg, rgba(24, 31, 51, 0.84), rgba(15, 20, 35, 0.88)),
    radial-gradient(circle at 10% 0%, rgba(92, 216, 255, 0.12), transparent 55%);
  color: inherit;
  text-decoration: none;
  transition: transform 160ms ease, border-color 160ms ease, box-shadow 160ms ease;
}

.blog-guide-card:hover {
  transform: translateY(-2px);
  border-color: rgba(132, 157, 255, 0.28);
  box-shadow: 0 14px 28px rgba(0, 0, 0, 0.26);
}

.blog-guide-card-head {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.blog-guide-chip {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 3px 8px;
  border-radius: 999px;
  border: 1px solid rgba(212, 175, 55, 0.25);
  background: rgba(212, 175, 55, 0.08);
  color: #b9f3ff;
  font-size: 11px;
  font-weight: 700;
  letter-spacing: 0.04em;
  text-transform: uppercase;
}

.blog-guide-link {
  font-size: 12px;
  color: var(--text-faint);
}

.blog-guide-card h3 {
  margin: 0;
  font-size: 16px;
  color: var(--text);
}

.blog-guide-card p {
  margin: 0;
  font-size: 13px;
  color: var(--text-muted);
  line-height: 1.45;
}

.blog-guides-section {
  padding-top: 12px;
}

.blog-guide-list {
  display: grid;
  gap: 14px;
}

.blog-guide-article {
  scroll-margin-top: 84px;
  padding: 18px 18px 16px;
  border-radius: 16px;
  border: 1px solid rgba(132, 157, 255, 0.12);
  background: rgba(16, 22, 36, 0.74);
  box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.02);
}

.blog-guide-article-head h2 {
  margin: 4px 0 8px;
  font-size: 20px;
  color: var(--text);
}

.blog-guide-article-head p:last-child {
  margin: 0;
  font-size: 14px;
  color: var(--text-muted);
  line-height: 1.5;
}

.blog-guide-steps {
  margin: 12px 0 0;
  padding-left: 18px;
  display: grid;
  gap: 8px;
}

.blog-guide-steps li {
  color: var(--text);
  line-height: 1.45;
}

@media (max-width: 980px) {
  .landing-hero {
    grid-template-columns: 1fr;
  }

  .landing-hero-copy h1 {
    max-width: none;
  }

  .landing-feature-grid {
    grid-template-columns: 1fr;
  }

  .landing-roadmap-shell {
    grid-template-columns: 1fr;
  }

  .landing-final-cta {
    grid-template-columns: 1fr;
    align-items: start;
  }

  .landing-final-actions {
    justify-content: flex-start;
  }

  .landing-footer-shell {
    grid-template-columns: 1fr;
  }

  .landing-footer-links {
    grid-template-columns: 1fr;
  }

  .blog-card-grid {
    grid-template-columns: 1fr 1fr;
  }

  .bug-report-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 640px) {
  .landing-page {
    padding: 12px;
  }

  .landing-nav {
    padding: 8px 10px;
  }

  .landing-nav-actions {
    gap: 6px;
  }

  .landing-nav-link,
  .landing-nav-cta {
    padding: 8px 10px;
    font-size: 0.85rem;
  }

  .landing-hero-copy {
    padding: 18px;
  }

  .landing-stat-row {
    grid-template-columns: 1fr;
  }

  .landing-preview-grid {
    grid-template-columns: 1fr;
  }

  .landing-preview-search {
    width: 100%;
    margin-left: 0;
  }

  .blog-card-grid {
    grid-template-columns: 1fr;
  }
}

.loading-screen-logo {
  width: 120px;
  height: 120px;
  object-fit: contain;
  border-radius: var(--radius-lg);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(0.96); }
}

/* ==========================================================================
   Loading Spinner
   ========================================================================== */

.loading-spinner {
  animation: spin 0.8s linear infinite;
  color: var(--accent);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.btn-spinner {
  display: inline-block;
  width: 14px;
  height: 14px;
  border: 2px solid currentColor;
  border-right-color: transparent;
  border-radius: 50%;
  animation: spin 0.6s linear infinite;
  margin-right: 6px;
}

/* ==========================================================================
   Button Component
   ========================================================================== */

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 6px;
  border: 1px solid var(--stroke);
  border-radius: var(--radius-pill);
  font-weight: 500;
  transition: all 0.16s ease;
  white-space: nowrap;
  outline: none;
  background: transparent;
  color: var(--text);
  line-height: 1;
  cursor: pointer;
}

.btn:focus-visible {
  box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 65%, transparent);
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn:active:not(:disabled) {
  transform: translateY(1px) scale(0.995);
}

/* Sizes */
.btn-sm { padding: 6px 12px; font-size: 12px; }
.btn-md { padding: 10px 20px; font-size: 14px; }
.btn-lg { padding: 12px 28px; font-size: 16px; }

/* Primary variant */
.btn-primary {
  background: var(--gratonite-gold, #d4af37);
  border-color: rgba(212, 175, 55, 0.4);
  color: var(--text-on-gold, #1a1a2e);
  font-weight: 600;
}
.btn-primary:hover:not(:disabled) {
  background: var(--gratonite-gold-bright, #e8c547);
  border-color: rgba(212, 175, 55, 0.6);
  box-shadow: 0 8px 20px rgba(212, 175, 55, 0.28);
  filter: brightness(1.05);
}

/* Ghost variant */
.btn-ghost {
  background: transparent;
  border-color: var(--stroke);
}
.btn-ghost:hover:not(:disabled) {
  background: rgba(212, 175, 55, 0.08);
  border-color: rgba(212, 175, 55, 0.25);
}

/* Danger variant */
.btn-danger {
  background: var(--danger-bg);
  border-color: rgba(255, 107, 107, 0.3);
  color: var(--danger);
}
.btn-danger:hover:not(:disabled) {
  border-color: rgba(255, 107, 107, 0.5);
  box-shadow: 0 8px 20px rgba(255, 107, 107, 0.16);
}

/* Loading state */
.btn-loading {
  cursor: wait;
}

/* ==========================================================================
   Input Component
   ========================================================================== */

.input-group {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.input-label {
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.04em;
  color: var(--text-muted);
}

.input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
}

.input-field {
  width: 100%;
  padding: 10px 14px;
  background: var(--bg-input);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-md);
  color: var(--text);
  font-family: inherit;
  font-size: 14px;
  outline: none;
  transition: border-color 0.15s ease, box-shadow 0.15s ease, background-color 0.15s ease;
}

.input-field:focus {
  border-color: var(--accent);
  box-shadow: 0 0 0 2px color-mix(in srgb, var(--accent) 22%, transparent);
  background: rgba(8, 14, 26, 0.88);
}

.input-field::placeholder {
  color: var(--text-faint);
}

.input-error .input-field {
  border-color: var(--danger);
}

.input-toggle {
  position: absolute;
  right: 10px;
  background: none;
  border: none;
  color: var(--text-muted);
  font-size: 12px;
  padding: 4px 6px;
  cursor: pointer;
}
.input-toggle:hover {
  color: var(--text);
}

.input-toggle:focus-visible {
  outline: 2px solid color-mix(in srgb, var(--accent) 55%, transparent);
  border-radius: var(--radius-sm);
}

.input-error-text {
  font-size: 12px;
  color: var(--danger);
}

.input-hint {
  font-size: 12px;
  color: var(--text-faint);
}

/* ==========================================================================
   Avatar
   ========================================================================== */

.avatar {
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
  object-fit: cover;
}

.avatar-fallback {
  display: grid;
  place-items: center;
  background: var(--gradient-primary);
  border: 1px solid rgba(212, 175, 55, 0.2);
  font-weight: 600;
  color: var(--text);
}

.avatar-decorated {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.avatar-in-decorated {
  width: 100%;
  height: 100%;
}

.avatar-decoration-overlay {
  position: absolute;
  inset: -12%;
  width: 124%;
  height: 124%;
  object-fit: contain;
  pointer-events: none;
}

.avatar-status-wrap {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.avatar-presence-badge {
  position: absolute;
  right: -1px;
  bottom: -1px;
  width: 11px;
  height: 11px;
  border-radius: 999px;
  border: 2px solid rgba(8, 12, 20, 0.95);
  box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.06);
}

.presence-dot {
  width: 8px;
  height: 8px;
  border-radius: 999px;
  display: inline-block;
  flex-shrink: 0;
}

.presence-online { background: #22c55e; }
.presence-idle { background: #f59e0b; }
.presence-dnd { background: #ef4444; }
.presence-invisible { background: #64748b; }
.presence-offline { background: #64748b; }

/* ==========================================================================
   Guild Icon
   ========================================================================== */

.guild-icon {
  border-radius: var(--radius-lg);
  overflow: hidden;
  flex-shrink: 0;
  object-fit: cover;
  transition: border-radius 0.2s ease;
}

.guild-icon-fallback {
  display: grid;
  place-items: center;
  background: var(--bg-elevated);
  border: 1px solid var(--stroke);
  font-weight: 600;
  color: var(--text-muted);
}

.guild-icon:hover,
.guild-icon-fallback:hover {
  border-radius: var(--radius-md);
}

/* ==========================================================================
   Auth Layout
   ========================================================================== */

.auth-layout {
  min-height: 100vh;
  display: grid;
  place-items: center;
  padding: 24px;
  background: linear-gradient(135deg, #2c2c3e 0%, #3e3a5a 40%, #5a4a7a 100%);
}

.auth-card {
  width: 100%;
  max-width: 440px;
  background: rgba(44, 44, 62, 0.72);
  backdrop-filter: blur(20px);
  -webkit-backdrop-filter: blur(20px);
  border: 1px solid rgba(74, 70, 96, 0.5);
  border-radius: 16px;
  padding: 40px;
}

.auth-brand {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 32px;
  justify-content: center;
}

.auth-logo {
  border-radius: var(--radius-md);
}

.auth-title {
  font-size: 24px;
  font-weight: 700;
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.auth-form {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.auth-heading {
  font-size: 20px;
  font-weight: 700;
  text-align: center;
}

.auth-subheading {
  font-size: 14px;
  color: var(--text-muted);
  text-align: center;
  margin-bottom: 4px;
}

.auth-error {
  padding: 10px 14px;
  background: var(--danger-bg);
  border: 1px solid rgba(255, 107, 107, 0.25);
  border-radius: var(--radius-md);
  color: var(--danger);
  font-size: 13px;
}

.auth-success {
  padding: 10px 14px;
  background: rgba(61, 214, 140, 0.09);
  border: 1px solid rgba(61, 214, 140, 0.22);
  border-radius: var(--radius-md);
  color: #89f0bb;
  font-size: 13px;
}

.auth-note {
  padding: 10px 12px;
  border-radius: var(--radius-md);
  border: 1px solid color-mix(in srgb, var(--stroke) 90%, transparent);
  background: rgba(255, 255, 255, 0.02);
  color: var(--text-muted);
  font-size: 12px;
  line-height: 1.45;
}

.auth-form-nested {
  gap: 12px;
}

.auth-button-link {
  text-decoration: none;
}

.auth-mfa-panel {
  display: grid;
  gap: 10px;
  padding: 10px;
  border-radius: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(255, 255, 255, 0.02);
}

.auth-mfa-toggle {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 6px;
}

.auth-mfa-mode {
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  background: rgba(255, 255, 255, 0.02);
  color: var(--text-muted);
  border-radius: 10px;
  padding: 8px 10px;
  font-size: 12px;
  font-weight: 600;
  cursor: pointer;
}

.auth-mfa-mode.active {
  color: var(--text);
  border-color: rgba(121, 223, 255, 0.24);
  background: rgba(121, 223, 255, 0.08);
}

.settings-inline-note {
  font-size: 12px;
  color: var(--text-muted);
}

.mfa-setup-card {
  margin-top: 12px;
  border: 1px solid color-mix(in srgb, var(--stroke) 88%, transparent);
  border-radius: 14px;
  padding: 12px;
  display: grid;
  gap: 12px;
  grid-template-columns: auto 1fr;
  background: rgba(255, 255, 255, 0.02);
}

.mfa-setup-qr-wrap {
  width: 220px;
  max-width: 100%;
  border-radius: 12px;
  overflow: hidden;
  background: #fff;
  padding: 8px;
}

.mfa-setup-qr {
  display: block;
  width: 100%;
