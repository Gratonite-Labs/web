/* ========== Profile Theme Colors ========== */
.profile-popover {
  --profile-primary: #1e1f2e;
  --profile-accent: #7C3AED;
}

.profile-popover .profile-popover-banner:not([style*="background-image"]) {
  background: linear-gradient(
    135deg,
    var(--profile-primary) 0%,
    color-mix(in srgb, var(--profile-primary) 60%, #0a0a0f) 100%
  );
}

.profile-popover .profile-accent-bar {
  background: var(--profile-accent);
}

/* ========== Recent Avatars Strip ========== */
.profile-recent-avatars { margin-top: 12px; }
.profile-recent-avatars-strip {
  display: flex;
  gap: 8px;
  margin-top: 6px;
}
.profile-recent-avatar-btn {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid transparent;
  cursor: pointer;
  transition: border-color 0.15s;
  background: none;
  padding: 0;
}
.profile-recent-avatar-btn:hover { border-color: var(--accent); }
.profile-recent-avatar-img { width: 100%; height: 100%; object-fit: cover; }

/* ========== Cosmetic Pickers (Decorations, Effects) ========== */
.cosmetic-picker-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1100;
}
.cosmetic-picker {
  background: var(--surface-2);
  border-radius: 12px;
  width: 480px;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-shadow: 0 20px 60px rgba(0,0,0,0.5);
}
.cosmetic-picker-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 20px 16px;
  border-bottom: 1px solid var(--border);
}
.cosmetic-picker-header h3 { font-size: 18px; font-weight: 600; }
.cosmetic-picker-close {
  background: none;
  border: none;
  color: var(--text-muted);
  font-size: 16px;
  cursor: pointer;
  padding: 4px 8px;
  border-radius: 4px;
}
.cosmetic-picker-close:hover { color: var(--text-primary); }
.cosmetic-picker-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 8px;
  padding: 16px;
  overflow-y: auto;
}
.cosmetic-item {
  aspect-ratio: 1;
  border-radius: 8px;
  border: 2px solid transparent;
  background: var(--surface-1);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: border-color 0.15s;
  overflow: hidden;
}
.cosmetic-item:hover { border-color: var(--text-muted); }
.cosmetic-item.selected { border-color: var(--accent); }
.cosmetic-item-img { width: 100%; height: 100%; object-fit: contain; }
.cosmetic-item-none { font-size: 11px; color: var(--text-muted); }
.cosmetic-picker-empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12px;
  padding: 32px;
  color: var(--text-muted);
}
.cosmetic-picker-footer {
  display: flex;
  gap: 8px;
  justify-content: flex-end;
  padding: 12px 20px;
  border-top: 1px solid var(--border);
}
.effect-preview { animation: effect-pulse 2s ease-in-out infinite; }
@keyframes effect-pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.05); }
}
.effect-item { flex-direction: column; gap: 4px; padding: 8px; }
.effect-item-label { font-size: 10px; color: var(--text-muted); text-align: center; }

/* ========== Banner Crop Modal ========== */
.banner-crop-container {
  padding: 16px;
  min-height: 280px;
  display: flex;
  align-items: center;
  justify-content: center;
}
.banner-crop-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  color: var(--text-muted);
}
.banner-crop-preview {
  width: 100%;
  max-width: 480px;
  position: relative;
}
.banner-crop-preview img {
  width: 100%;
  height: auto;
  border-radius: 8px;
}
.banner-crop-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.7);
  padding: 8px;
  text-align: center;
  font-size: 12px;
  color: var(--text-muted);
  border-radius: 0 0 8px 8px;
}

/* ========== Image Lightbox ========== */
.image-lightbox-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1300;
  cursor: zoom-out;
}
.image-lightbox-img {
  max-width: 90vw;
  max-height: 90vh;
  object-fit: contain;
  border-radius: 8px;
  cursor: default;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.6);
}
.image-lightbox-close {
  position: absolute;
  top: 16px;
  right: 16px;
  background: rgba(0, 0, 0, 0.5);
  border: none;
  color: white;
  font-size: 20px;
  width: 36px;
  height: 36px;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1301;
}
.image-lightbox-close:hover {
  background: rgba(255, 255, 255, 0.15);
}

/* ==========================================================================
   Keyboard Shortcuts Help Modal
   ========================================================================== */

.shortcuts-help-content {
  display: flex;
  flex-direction: column;
  gap: 24px;
  padding: 8px 0 12px;
  max-height: 60vh;
  overflow-y: auto;
}

.shortcuts-category {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.shortcuts-category-title {
  font-family: var(--font-display);
  font-size: 0.7rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--text-tertiary);
  padding-bottom: 4px;
  border-bottom: 1px solid var(--stroke);
}

.shortcuts-list {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.shortcuts-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 6px 8px;
  border-radius: 6px;
  transition: background 0.15s;
}

.shortcuts-row:hover {
  background: var(--bg-soft);
}

.shortcuts-label {
  font-size: 0.875rem;
  color: var(--text-muted);
}

kbd.shortcuts-keys {
  display: inline-flex;
  align-items: center;
  gap: 4px;
  font-family: var(--font-display);
  font-size: 0.75rem;
  font-weight: 500;
  color: var(--text-primary);
  background: var(--bg-elevated);
  border: 1px solid var(--stroke-strong);
  border-radius: 5px;
  padding: 3px 8px;
  min-width: 24px;
  text-align: center;
  box-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  white-space: nowrap;
}

/* ==========================================================================
   DM Search Bar
   ========================================================================== */

.dm-search-bar {
  padding: 0;
  position: relative;
}

.dm-search-bar input {
  width: 100%;
  box-sizing: border-box;
  padding: 8px 12px 8px 32px;
  border-radius: 6px;
  background: var(--bg-input, #25243a);
  border: 1px solid var(--stroke, #4a4660);
  color: var(--text, #e8e4e0);
  font-family: var(--font-sans);
  font-size: 0.8125rem;
  outline: none;
  transition: border-color 0.15s ease, background 0.15s ease;
}

.dm-search-bar input::placeholder {
  color: var(--text-faint, #6e6a80);
}

.dm-search-bar input:focus {
  border-color: var(--accent, #d4af37);
  background: color-mix(in srgb, var(--bg-input, #25243a) 90%, var(--accent, #d4af37) 10%);
}

.dm-search-dropdown {
  position: absolute;
  top: 100%;
  left: 10px;
  right: 10px;
  background: var(--bg-elevated);
  border: 1px solid var(--stroke);
  border-radius: 8px;
  box-shadow: 0 8px 24px rgba(0, 0, 0, 0.4);
  max-height: 240px;
  overflow-y: auto;
  z-index: 10;
}

.dm-search-result {
  display: flex;
  align-items: center;
  gap: 10px;
  width: 100%;
  padding: 8px 12px;
  cursor: pointer;
  border: none;
  background: none;
  text-align: left;
  font-family: var(--font-sans);
  transition: background 0.12s ease;
}

.dm-search-result:hover {
  background: var(--bg-soft);
}

.dm-search-result-name {
  color: var(--text);
  font-size: 0.875rem;
  font-weight: 500;
}

.dm-search-result-username {
  color: var(--text-muted);
  font-size: 0.75rem;
  margin-left: auto;
}

.dm-search-loading {
  padding: 12px;
  text-align: center;
  color: var(--text-muted);
  font-size: 0.8125rem;
}

/* ==========================================================================
   DM List Items
   ========================================================================== */

.dm-list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 8px 12px;
  border-radius: 8px;
  gap: 10px;
  position: relative;
  text-decoration: none;
  color: var(--text-muted, #a8a4b8);
  transition: background 0.15s ease, color 0.15s ease;
  margin: 1px 0;
}

.dm-list-item:hover {
  background: var(--bg-soft, #413d58);
  color: var(--text, #e8e4e0);
  text-decoration: none;
}

.dm-list-item.active {
  background: var(--bg-soft, #413d58) !important;
  color: var(--text, #e8e4e0) !important;
  border-left: 2px solid var(--accent, #d4af37);
  padding-left: 10px;
}

.dm-list-item-info {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
  gap: 2px;
}

.dm-list-item-name {
  font-size: 13.5px;
  font-weight: 600;
  color: var(--text, #e8e4e0);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
}

.dm-list-item-preview {
  font-size: 12px;
  color: var(--text-muted, #a8a4b8);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 1.3;
}

.dm-list-item.active .dm-list-item-name {
  color: var(--text, #e8e4e0);
}

.dm-list-item-meta {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 4px;
  flex-shrink: 0;
}

.dm-list-item-time {
  font-size: 10.5px;
  color: var(--text-faint, #6e6a80);
  font-weight: 500;
}

.dm-list-item-unread-badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  min-width: 18px;
  height: 18px;
  padding: 0 5px;
  border-radius: 9px;
  background: var(--accent, #d4af37);
  color: #1a1a2e;
  font-size: 10px;
  font-weight: 700;
  line-height: 1;
}

.dm-list-item-close {
  position: absolute;
  top: 4px;
  right: 4px;
  opacity: 0;
  width: 20px;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  color: var(--text-muted, #a8a4b8);
  font-size: 14px;
  cursor: pointer;
  padding: 0;
  border-radius: 4px;
  transition: opacity 0.15s ease, color 0.15s ease;
  line-height: 1;
}

.dm-list-item:hover .dm-list-item-close {
  opacity: 0.6;
}

.dm-list-item-close:hover {
  opacity: 1 !important;
  color: var(--text, #e8e4e0);
}

/* ==========================================================================
   DM Tab Bar
   ========================================================================== */

.dm-tab-bar {
  display: flex;
  align-items: center;
  gap: 2px;
  padding: 0 16px;
  height: 44px;
  border-bottom: 1px solid var(--stroke);
  background: var(--bg);
  flex-shrink: 0;
}

.dm-tab {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 8px 14px;
  font-size: 13px;
  font-weight: 500;
  color: var(--text-muted);
  text-decoration: none;
  border-bottom: 2px solid transparent;
  transition: color 0.15s, border-color 0.15s;
  margin-bottom: -1px;
}

.dm-tab:hover {
  color: var(--text-muted);
}

.dm-tab.active {
  color: var(--text);
  border-bottom-color: var(--gratonite);
}

.dm-tab svg {
  width: 16px;
  height: 16px;
  flex-shrink: 0;
}

/* ==========================================================================
   Friends Page
   ========================================================================== */

.friends-page {
  padding: 24px;
  max-width: 900px;
  margin: 0 auto;
  height: 100%;
  overflow-y: auto;
}

.friends-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.friends-header h2 {
  font-family: var(--font-display);
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text);
}

.friends-add-btn {
  padding: 8px 16px;
  border-radius: 8px;
  background: var(--gratonite);
  color: white;
  font-size: 13px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: opacity 0.15s;
}

.friends-add-btn:hover {
  opacity: 0.85;
}

.friends-filter-row {
  display: flex;
  gap: 4px;
  margin-bottom: 16px;
  border-bottom: 1px solid var(--stroke);
  padding-bottom: 12px;
}

.friends-filter-btn {
  padding: 6px 14px;
  border-radius: 6px;
  font-size: 13px;
  font-weight: 500;
  color: var(--text-muted);
  background: transparent;
  border: none;
  cursor: pointer;
  transition: all 0.15s;
}

.friends-filter-btn:hover {
  color: var(--text-muted);
  background: var(--bg-soft);
}

.friends-filter-btn.active {
  color: var(--text);
  background: var(--bg-elevated);
}

.friends-list {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.friend-row {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 10px 12px;
  border-radius: 10px;
  transition: background 0.15s;
}

.friend-row:hover {
  background: var(--bg-soft);
}

.friend-row-avatar-wrap {
  position: relative;
  flex-shrink: 0;
}

.friend-presence-dot {
  position: absolute;
  bottom: -1px;
  right: -1px;
  width: 12px;
  height: 12px;
  border-radius: 50%;
  border: 2.5px solid var(--bg);
  background: #747f8d;
}

.friend-presence-dot.presence-online { background: #23a55a; }
.friend-presence-dot.presence-idle    { background: #f0b232; }
.friend-presence-dot.presence-dnd     { background: #f23f43; }
.friend-presence-dot.presence-offline { background: #80848e; }

.friend-row-info {
  flex: 1;
  min-width: 0;
}

.friend-row-name {
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
}

.friend-row-username {
  font-size: 12px;
  color: var(--text-muted);
}

.friend-row-badge {
  font-size: 11px;
  font-weight: 600;
  padding: 2px 8px;
  border-radius: 10px;
  text-transform: uppercase;
  letter-spacing: 0.03em;
}

.friend-row-badge.incoming {
  background: rgba(124, 58, 237, 0.15);
  color: var(--gratonite-light);
}

.friend-row-badge.outgoing {
  background: rgba(140, 178, 220, 0.1);
  color: var(--text-muted);
}

.friend-row-actions {
  display: flex;
  gap: 6px;
  flex-shrink: 0;
}

.friend-row-actions button {
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 12px;
  font-weight: 500;
  border: 1px solid var(--stroke);
  background: var(--bg-elevated);
  color: var(--text-muted);
  cursor: pointer;
  transition: all 0.15s;
}

.friend-row-actions button:hover {
  background: var(--bg-soft);
  border-color: var(--stroke-strong);
}

.friend-row-actions button.accept {
  background: var(--gratonite);
  color: white;
  border-color: transparent;
}

.friend-row-actions button.decline {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
  border-color: rgba(239, 68, 68, 0.2);
}

.friends-empty {
  text-align: center;
  padding: 48px 24px;
  color: var(--text-muted);
  font-size: 14px;
}

/* ==========================================================================
   Leaderboard Page
   ========================================================================== */

.leaderboard-page {
  padding: 24px;
  max-width: 900px;
  margin: 0 auto;
  height: 100%;
  overflow-y: auto;
}

.leaderboard-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20px;
}

.leaderboard-header h2 {
  font-family: var(--font-display);
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text);
}

.leaderboard-filters {
  display: flex;
  gap: 4px;
  margin-bottom: 16px;
}

.leaderboard-filter-btn {
  padding: 6px 14px;
  border-radius: 6px;
  font-size: 13px;
  font-weight: 500;
  color: var(--text-muted);
  background: transparent;
  border: none;
  cursor: pointer;
  transition: all 0.15s;
}

.leaderboard-filter-btn:hover {
  color: var(--text-muted);
  background: var(--bg-soft);
}

.leaderboard-filter-btn.active {
  color: var(--text);
  background: var(--bg-elevated);
}

.leaderboard-table {
  width: 100%;
  border-collapse: separate;
  border-spacing: 0 2px;
}

.leaderboard-table th {
  text-align: left;
  padding: 8px 12px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  color: var(--text-muted);
  border-bottom: 1px solid var(--stroke);
}

.leaderboard-table td {
  padding: 10px 12px;
  font-size: 14px;
  color: var(--text-muted);
}

.leaderboard-row {
  border-radius: 8px;
  transition: background 0.15s;
}

.leaderboard-row:hover {
  background: var(--bg-soft);
}

.leaderboard-row.current-user {
  background: rgba(124, 58, 237, 0.08);
}

.leaderboard-rank {
  font-weight: 600;
  width: 50px;
}

.leaderboard-user-cell {
  display: flex;
  align-items: center;
  gap: 10px;
}

.leaderboard-user-name {
  font-weight: 500;
  color: var(--text);
}

.leaderboard-empty {
  text-align: center;
  padding: 48px 24px;
  color: var(--text-muted);
}

/* ==========================================================================
   Gratonite Dashboard
   ========================================================================== */

.gratonite-dashboard {
  padding: 24px 32px;
  max-width: 960px;
  margin: 0 auto;
  height: 100%;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.gd-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: var(--text-muted);
  font-size: 15px;
}

.gd-page-title {
  font-family: var(--font-display);
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--text);
  margin: 0;
}

/* ---- Balance Card ---- */

.gd-balance-card {
  background: var(--bg-elevated);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  padding: 28px 24px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20px;
}

.gd-balance-hero {
  display: flex;
  align-items: baseline;
  gap: 6px;
}

.gd-currency-symbol {
  font-family: var(--font-display);
  font-size: 2rem;
  font-weight: 600;
  color: var(--gratonite-light);
}

.gd-balance-number {
  font-family: var(--font-display);
  font-size: 3rem;
  font-weight: 700;
  color: var(--text);
  line-height: 1;
}

.gd-balance-stats {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
  width: 100%;
}

.gd-stat-box {
  background: var(--bg-soft);
  border-radius: var(--radius-md);
  padding: 14px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4px;
}

.gd-stat-label {
  font-size: 12px;
  font-weight: 500;
  color: var(--text-faint);
  text-transform: uppercase;
  letter-spacing: 0.04em;
}

.gd-stat-value {
  font-family: var(--font-display);
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text);
}

/* ---- Section common ---- */

.gd-section {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.gd-section-title {
  font-family: var(--font-display);
  font-size: 1.1rem;
  font-weight: 600;
  color: var(--text);
  margin: 0;
}

.gd-empty {
  color: var(--text-muted);
  font-size: 14px;
  padding: 16px 0;
}

/* ---- Transaction History ---- */

.gd-transactions {
  display: flex;
  flex-direction: column;
  background: var(--bg-elevated);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  max-height: 360px;
  overflow-y: auto;
}

.gd-tx-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12px 16px;
  border-bottom: 1px solid var(--stroke);
}

.gd-tx-row:last-child {
  border-bottom: none;
}

.gd-tx-left {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.gd-tx-date {
  font-size: 12px;
  color: var(--text-faint);
}

.gd-tx-desc {
  font-size: 14px;
  color: var(--text);
}

.gd-tx-amount {
  font-family: var(--font-display);
  font-weight: 600;
  font-size: 14px;
  white-space: nowrap;
}

/* Earn / Spend colors */

.gd-earn {
  color: var(--gratonite-teal);
}

.gd-spend {
  color: var(--danger);
}

/* ---- Earning Milestones ---- */

.gd-milestones {
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.gd-milestone-row {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.gd-milestone-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gd-milestone-label {
  font-size: 14px;
  font-weight: 500;
  color: var(--text);
}

.gd-milestone-check {
  color: var(--gratonite-teal);
  font-weight: 700;
}

.gd-milestone-count {
  font-size: 12px;
  color: var(--text-faint);
}

.gd-progress-track {
  height: 8px;
  background: var(--bg-soft);
  border-radius: var(--radius-pill);
  overflow: hidden;
}

.gd-progress-fill {
  height: 100%;
  background: var(--gratonite);
  border-radius: var(--radius-pill);
  transition: width 0.4s var(--motion-ease);
}

.gd-progress-fill.gd-progress-complete {
  background: var(--gratonite-teal);
}

/* ---- Ways to Earn ---- */

.gd-earn-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 12px;
}

.gd-earn-card {
  background: var(--bg-elevated);
  border: 1px solid var(--stroke);
  border-radius: var(--radius-lg);
  padding: 20px 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  text-align: center;
  transition: border-color var(--motion-fast) ease;
}

.gd-earn-card:hover {
  border-color: var(--stroke-strong);
}

.gd-earn-icon {
  font-size: 1.75rem;
}

.gd-earn-title {
  font-family: var(--font-display);
  font-size: 15px;
  font-weight: 600;
  color: var(--text);
}

.gd-earn-desc {
  font-size: 13px;
  color: var(--text-muted);
  line-height: 1.4;
}

/* ==========================================================================
   Group Members Panel
   ========================================================================== */

.group-members-panel {
  width: 340px;
  background: rgba(11, 17, 28, 0.95);
  border-left: 1px solid var(--stroke);
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.group-members-header {
  padding: 16px;
  border-bottom: 1px solid var(--stroke);
  flex-shrink: 0;
}

.group-members-title {
  font-family: var(--font-display);
  font-size: 15px;
  font-weight: 600;
  color: var(--text);
}

.group-members-list {
  padding: 8px;
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.group-members-row {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 8px;
  border-radius: 6px;
  background: none;
  border: none;
  cursor: pointer;
  width: 100%;
  text-align: left;
  color: inherit;
  font: inherit;
  transition: background var(--motion-fast, 0.15s) ease;
}

.group-members-row:hover {
  background: rgba(255, 255, 255, 0.04);
}

.group-members-name {
  font-size: 14px;
  color: var(--text);
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.group-members-status-dot {
  width: 10px;
  height: 10px;
  border-radius: 50%;
  flex-shrink: 0;
}

.group-members-status-online {
  background: #23a55a;
}

.group-members-status-idle {
  background: #f0b232;
}

.group-members-status-dnd {
  background: #f23f43;
}

.group-members-status-offline,
.group-members-status-invisible {
  background: #80848e;
}

.group-members-empty {
  padding: 16px;
  text-align: center;
  font-size: 14px;
  color: var(--text-muted);
  margin: 0;
}

/* ===================================================================
   Full Profile Overlay
   =================================================================== */

.full-profile-backdrop {
  position: fixed;
  inset: 0;
  z-index: 1050;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.6);
  animation: full-profile-fade-in 0.15s ease;
}

@keyframes full-profile-fade-in {
  from { opacity: 0; }
  to { opacity: 1; }
}

.full-profile-overlay {
  position: relative;
  width: 100%;
  max-width: 600px;
  max-height: 90vh;
  overflow-y: auto;
  background: var(--bg-elevated, #1e1f22);
  border-radius: var(--radius-lg, 12px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.45);
  animation: full-profile-slide-up 0.2s ease;
}

@keyframes full-profile-slide-up {
  from { opacity: 0; transform: translateY(16px); }
  to { opacity: 1; transform: translateY(0); }
}

.full-profile-close {
  position: absolute;
  top: 12px;
  right: 12px;
  z-index: 2;
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.4);
  border: none;
  border-radius: 50%;
  color: #fff;
  font-size: 20px;
  line-height: 1;
  cursor: pointer;
  transition: background 0.15s ease;
}

.full-profile-close:hover {
  background: rgba(0, 0, 0, 0.6);
}

.full-profile-banner {
  width: 100%;
  height: 180px;
  background: linear-gradient(135deg, var(--gratonite-purple, #5a4a7a) 0%, var(--gratonite-gold, #d4af37) 100%);
  border-radius: var(--radius-lg, 12px) var(--radius-lg, 12px) 0 0;
  background-size: cover;
  background-position: center;
}

.full-profile-body {
  padding: 0 24px 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.full-profile-header {
  display: flex;
  align-items: flex-end;
  gap: 16px;
  margin-top: -40px;
}

.full-profile-avatar-wrap {
  flex-shrink: 0;
  border-radius: 50%;
  border: 4px solid var(--bg-elevated, #1e1f22);
  background: var(--bg-elevated, #1e1f22);
  line-height: 0;
}

.full-profile-names {
  display: flex;
  flex-direction: column;
  gap: 2px;
  padding-bottom: 4px;
  min-width: 0;
}

.full-profile-display-name {
  margin: 0;
  font-size: 22px;
  font-weight: 700;
  color: var(--text-primary, #f2f3f5);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.full-profile-username {
  font-size: 14px;
  color: var(--text-muted, #949ba4);
}

.full-profile-pronouns {
  font-size: 13px;
  color: var(--text-muted, #949ba4);
}

.full-profile-bio {
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-primary, #f2f3f5);
  white-space: pre-wrap;
  word-break: break-word;
}

.full-profile-bio p {
  margin: 0;
}

.full-profile-stats {
  display: flex;
  gap: 24px;
  flex-wrap: wrap;
}

.full-profile-stat {
  display: flex;
  flex-direction: column;
  gap: 2px;
}

.full-profile-stat-label {
  font-size: 11px;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.02em;
  color: var(--text-muted, #949ba4);
}

.full-profile-stat-value {
  font-size: 14px;
  color: var(--text-primary, #f2f3f5);
}

.full-profile-actions {
  display: flex;
  align-items: center;
  gap: 8px;
  margin-top: 4px;
}

.full-profile-action-btn {
  padding: 8px 16px;
  border: none;
  border-radius: var(--radius-md, 8px);
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.15s ease, opacity 0.15s ease;
  white-space: nowrap;
}

.full-profile-action-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.full-profile-action-message {
  background: var(--gratonite-gold, #d4af37);
  color: var(--text-on-gold, #1a1a2e);
}

.full-profile-action-message:hover:not(:disabled) {
  background: var(--gratonite-gold-bright, #e8c547);
}

.full-profile-action-add-friend {
  background: rgba(255, 255, 255, 0.08);
  color: var(--text-primary, #f2f3f5);
}

.full-profile-action-add-friend:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.14);
}

.full-profile-action-remove-friend {
  background: rgba(255, 255, 255, 0.08);
  color: var(--text-primary, #f2f3f5);
}

.full-profile-action-remove-friend:hover:not(:disabled) {
  background: rgba(255, 255, 255, 0.14);
}

.full-profile-action-more {
  width: 36px;
  height: 36px;
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.08);
